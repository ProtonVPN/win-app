<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:ProtonVPN.Client.Common.UI.Controls">

    <Thickness x:Key="DefaultPageContentPadding">16</Thickness>

    <Style TargetType="controls:PageContentControl">
        <Setter Property="Padding" Value="{StaticResource DefaultPageContentPadding}" />
        <Setter Property="Background" Value="{StaticResource BackgroundNormColorBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderWeakColorBrush}" />
        <Setter Property="BorderThickness" Value="1,1,0,0" />
        <Setter Property="CornerRadius" Value="8,0,0,0" />
    </Style>
</ResourceDictionary>