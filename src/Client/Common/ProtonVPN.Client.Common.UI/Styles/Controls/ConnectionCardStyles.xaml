<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom">

    <Thickness x:Key="ConnectionCardGhostButtonBorderThickness">0</Thickness>
    <Thickness x:Key="ConnectionCardGhostButtonPadding">8</Thickness>
    <CornerRadius x:Key="ConnectionCardGhostButtonCornerRadius">6</CornerRadius>

    <Style x:Key="ConnectionCardGhostButtonStyle" BasedOn="{StaticResource SecondaryGhostButtonStyle}" TargetType="custom:GhostButton">
        <Setter Property="BorderThickness" Value="{StaticResource ConnectionCardGhostButtonBorderThickness}" />
        <Setter Property="Padding" Value="{StaticResource ConnectionCardGhostButtonPadding}" />
        <Setter Property="CornerRadius" Value="{StaticResource ConnectionCardGhostButtonCornerRadius}" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
    </Style>

</ResourceDictionary>