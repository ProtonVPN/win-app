<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.ThemeDictionaries>

        <ResourceDictionary x:Key="Light">
            <StaticResource x:Key="ProgressBarForeground" ResourceKey="PrimaryColorBrush" />
            <StaticResource x:Key="ProgressBarBackground" ResourceKey="InteractionWeakColorBrush" />
            <StaticResource x:Key="ProgressBarBorderBrush" ResourceKey="InteractionWeakColorBrush" />
            <StaticResource x:Key="ProgressBarPausedForegroundColor" ResourceKey="InteractionWeakActiveColorBrush" />
            <StaticResource x:Key="ProgressBarErrorForegroundColor" ResourceKey="SignalDangerColorBrush" />
        </ResourceDictionary>

        <ResourceDictionary x:Key="Dark">
            <StaticResource x:Key="ProgressBarForeground" ResourceKey="PrimaryColorBrush" />
            <StaticResource x:Key="ProgressBarBackground" ResourceKey="InteractionWeakColorBrush" />
            <StaticResource x:Key="ProgressBarBorderBrush" ResourceKey="InteractionWeakColorBrush" />
            <StaticResource x:Key="ProgressBarPausedForegroundColor" ResourceKey="InteractionWeakActiveColorBrush" />
            <StaticResource x:Key="ProgressBarErrorForegroundColor" ResourceKey="SignalDangerColorBrush" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

    <x:Double x:Key="ProgressBarMinHeight">4</x:Double>
    <x:Double x:Key="ProgressBarTrackHeight">4</x:Double>
    <CornerRadius x:Key="ProgressBarCornerRadius">2</CornerRadius>
    <CornerRadius x:Key="ProgressBarTrackCornerRadius">2</CornerRadius>

    <Style TargetType="ProgressBar" />

</ResourceDictionary>