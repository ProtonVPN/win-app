        <ResourceDictionary x:Key="Dark">

            <StaticResource x:Key="FlyoutPresenterBackground" ResourceKey="FlyoutOverlayBackgroundColorBrush" />
            <StaticResource x:Key="FlyoutBorderThemeBrush" ResourceKey="FlyoutOverlayBorderColorBrush" />

            <StaticResource x:Key="MenuFlyoutPresenterBackground" ResourceKey="FlyoutOverlayBackgroundColorBrush" />
            <StaticResource x:Key="MenuFlyoutPresenterBorderBrush" ResourceKey="FlyoutOverlayBorderColorBrush" />

            <StaticResource x:Key="MenuFlyoutItemBackground" ResourceKey="InteractionDefaultEmptyColorBrush" />
            <StaticResource x:Key="MenuFlyoutItemBackgroundPointerOver" ResourceKey="InteractionDefaultHoverColorBrush" />
            <StaticResource x:Key="MenuFlyoutItemBackgroundPressed" ResourceKey="InteractionDefaultActiveColorBrush" />
            <StaticResource x:Key="MenuFlyoutItemBackgroundDisabled" ResourceKey="InteractionDefaultEmptyColorBrush" />

            <StaticResource x:Key="MenuFlyoutItemForeground" ResourceKey="TextNormColorBrush" />
            <StaticResource x:Key="MenuFlyoutItemForegroundPointerOver" ResourceKey="TextNormColorBrush" />
            <StaticResource x:Key="MenuFlyoutItemForegroundPressed" ResourceKey="TextNormColorBrush" />
            <StaticResource x:Key="MenuFlyoutItemForegroundDisabled" ResourceKey="TextDisabledColorBrush" />

            <StaticResource x:Key="MenuFlyoutItemBorderBrush" ResourceKey="TransparentColorBrush" />
            <StaticResource x:Key="MenuFlyoutItemBorderBrushPointerOver" ResourceKey="TransparentColorBrush" />
