<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="ScrollViewer" BasedOn="{StaticResource DefaultScrollViewer}" />

    <Thickness x:Key="DefaultScrollViewerMargin">0,0,0,0</Thickness>
    <Thickness x:Key="DefaultScrollViewerPadding">0,0,0,0</Thickness>

    <Style x:Key="DefaultScrollViewer" TargetType="ScrollViewer">
        <Setter Property="Margin" Value="{ThemeResource DefaultScrollViewerMargin}" />
        <Setter Property="Padding" Value="{ThemeResource DefaultScrollViewerPadding}" />
    </Style>
    
    <Thickness x:Key="OffsetScrollViewerMargin">0,0,-20,0</Thickness>
    <Thickness x:Key="OffsetScrollViewerPadding">0,0,20,0</Thickness>

    <Style x:Key="OffsetScrollViewer" TargetType="ScrollViewer" BasedOn="{StaticResource DefaultScrollViewer}" >
        <Setter Property="Margin" Value="{ThemeResource OffsetScrollViewerMargin}" />
        <Setter Property="Padding" Value="{ThemeResource OffsetScrollViewerPadding}" />
    </Style>
    
</ResourceDictionary>
