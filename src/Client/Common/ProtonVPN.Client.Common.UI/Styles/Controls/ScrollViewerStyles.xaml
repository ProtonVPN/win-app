<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Thickness x:Key="DefaultScrollViewerMargin">0,0,-20,0</Thickness>
    <Thickness x:Key="DefaultScrollViewerPadding">0,0,20,0</Thickness>
    
    <Style TargetType="ScrollViewer">
        <Setter Property="Margin" Value="{StaticResource DefaultScrollViewerMargin}" />
        <Setter Property="Padding" Value="{StaticResource DefaultScrollViewerPadding}" />
    </Style>
    
</ResourceDictionary>
