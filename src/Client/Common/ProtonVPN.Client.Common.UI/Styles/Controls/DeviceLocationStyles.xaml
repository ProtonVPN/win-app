<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
                    xmlns:pathIcons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons">

    <Style BasedOn="{StaticResource DeviceLocationStyle}" TargetType="custom:DeviceLocationControl" />

    <Style x:Key="DeviceLocationStyle" TargetType="custom:DeviceLocationControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="custom:DeviceLocationControl">
                    <Grid ColumnSpacing="16"
                          RowSpacing="12"
                          Padding="8,16">

                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Grid Grid.Column="0"
                              Grid.Row="0"
                              ColumnSpacing="8"
                              Padding="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <ContentPresenter x:Name="ProtectionIcon"
                                              Grid.Column="0" />

                            <TextBlock Grid.Column="1"
                                       Style="{ThemeResource BodyStrongTextBlockStyle}"
                                       Foreground="{ThemeResource TextNormColor}"
                                       Text="{TemplateBinding ProtectionLabel}" />

                            <TextBlock Grid.Column="2"
                                       Style="{ThemeResource BodyTextBlockStyle}"
                                       TextTrimming="CharacterEllipsis"
                                       TextWrapping="NoWrap"
                                       Foreground="{ThemeResource TextWeakColor}">
                                <Run Text="â€¢"/>
                                <Run Text="{Binding ProtectionSubLabel, RelativeSource={RelativeSource TemplatedParent}}"/>
                            </TextBlock>

                        </Grid>

                        <Grid Grid.Row="1"
                              Padding="8"
                              ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0"
                                        Spacing="2">
                                <TextBlock Text="{TemplateBinding IpAddressLabel}"
                                           Style="{ThemeResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextWeakColor}" />

                                <TextBlock x:Name="PART_ScrambledIpAddress"
                                           Foreground="{ThemeResource TextNormColor}"
                                           Style="{StaticResource BodyStrongTextBlockStyle}" />
                            </StackPanel>

                            <StackPanel Grid.Column="1"
                                        Spacing="2">
                                <TextBlock Text="{TemplateBinding CountryLabel}"
                                           Style="{ThemeResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextWeakColor}" />

                                <TextBlock x:Name="PART_ScrambledCountry"
                                           Foreground="{ThemeResource TextNormColor}"
                                           Style="{StaticResource BodyStrongTextBlockStyle}" />
                            </StackPanel>

                            <StackPanel Grid.Column="2"
                                        Spacing="2">
                                <TextBlock Text="{TemplateBinding IspLabel}"
                                           Style="{ThemeResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextWeakColor}" />

                                <TextBlock x:Name="PART_ScrambledIsp"
                                           Foreground="{ThemeResource TextNormColor}"
                                           Style="{StaticResource BodyStrongTextBlockStyle}" />
                            </StackPanel>
                        </Grid>

                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="ConnectionStates">

                                <VisualState x:Name="Connecting">
                                    <VisualState.Setters>
                                        <Setter Target="ProtectionIcon.Content">
                                            <Setter.Value>
                                                <ProgressRing Width="18"
                                                              Height="18"
                                                              HorizontalAlignment="Right"
                                                              IsActive="True" />
                                            </Setter.Value>
                                        </Setter>
                                    </VisualState.Setters>
                                </VisualState>

                                <VisualState x:Name="Disconnected">
                                    <VisualState.Setters>
                                        <Setter Target="ProtectionIcon.Content">
                                            <Setter.Value>
                                                <pathIcons:LockOpenFilled Grid.Column="0"
                                                                          Foreground="{ThemeResource SignalDangerColor}" />
                                            </Setter.Value>
                                        </Setter>
                                    </VisualState.Setters>
                                </VisualState>

                                <VisualState x:Name="Default" />

                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>