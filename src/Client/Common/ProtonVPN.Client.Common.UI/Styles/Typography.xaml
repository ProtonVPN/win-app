<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <FontFamily x:Key="DefaultFontFamily">XamlAutoFontFamily</FontFamily>
    <SolidColorBrush x:Key="DefaultForeground"
                     Color="{ThemeResource TextNormColor}"/>

    <Style x:Key="DefaultTextBlockStyle" BasedOn="{StaticResource BaseTextBlockStyle}" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource DefaultForeground}" />
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
    </Style>

    <!--  Title Large  -->
    <x:Double x:Key="TitleLargeFontSize">40</x:Double>
    <x:Double x:Key="TitleLargeLineHeight">52</x:Double>
    <FontWeight x:Key="TitleLargeFontWeight">SemiBold</FontWeight>
    <Style x:Key="TitleLargeTextBlockStyle" BasedOn="{StaticResource DefaultTextBlockStyle}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource TitleLargeFontSize}" />
        <Setter Property="LineHeight" Value="{StaticResource TitleLargeLineHeight}" />
        <Setter Property="FontWeight" Value="{StaticResource TitleLargeFontWeight}" />
        <Setter Property="OpticalMarginAlignment" Value="TrimSideBearings" />
    </Style>

    <!--  Title  -->
    <x:Double x:Key="TitleFontSize">28</x:Double>
    <x:Double x:Key="TitleLineHeight">36</x:Double>
    <FontWeight x:Key="TitleFontWeight">SemiBold</FontWeight>
    <Style x:Key="TitleTextBlockStyle" BasedOn="{StaticResource DefaultTextBlockStyle}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource TitleFontSize}" />
        <Setter Property="LineHeight" Value="{StaticResource TitleLineHeight}" />
        <Setter Property="FontWeight" Value="{StaticResource TitleFontWeight}" />
        <Setter Property="OpticalMarginAlignment" Value="TrimSideBearings" />
    </Style>

    <!--  Subtitle  -->
    <x:Double x:Key="SubtitleFontSize">20</x:Double>
    <x:Double x:Key="SubtitleLineHeight">28</x:Double>
    <FontWeight x:Key="SubtitleFontWeight">SemiBold</FontWeight>
    <Style x:Key="SubtitleTextBlockStyle" BasedOn="{StaticResource DefaultTextBlockStyle}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource SubtitleFontSize}" />
        <Setter Property="LineHeight" Value="{StaticResource SubtitleLineHeight}" />
        <Setter Property="FontWeight" Value="{StaticResource SubtitleFontWeight}" />
        <Setter Property="OpticalMarginAlignment" Value="TrimSideBearings" />
    </Style>

    <!--  Body Large Strong  -->
    <x:Double x:Key="BodyLargeStrongFontSize">18</x:Double>
    <x:Double x:Key="BodyLargeStrongLineHeight">24</x:Double>
    <FontWeight x:Key="BodyLargeStrongFontWeight">SemiBold</FontWeight>
    <Style x:Key="BodyLargeStrongTextBlockStyle" BasedOn="{StaticResource DefaultTextBlockStyle}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource BodyLargeStrongFontSize}" />
        <Setter Property="LineHeight" Value="{StaticResource BodyLargeStrongLineHeight}" />
        <Setter Property="FontWeight" Value="{StaticResource BodyLargeStrongFontWeight}" />
    </Style>

    <!--  Body Large  -->
    <x:Double x:Key="BodyLargeFontSize">18</x:Double>
    <x:Double x:Key="BodyLargeLineHeight">24</x:Double>
    <FontWeight x:Key="BodyLargeFontWeight">Normal</FontWeight>
    <Style x:Key="BodyLargeTextBlockStyle" BasedOn="{StaticResource DefaultTextBlockStyle}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource BodyLargeFontSize}" />
        <Setter Property="LineHeight" Value="{StaticResource BodyLargeLineHeight}" />
        <Setter Property="FontWeight" Value="{StaticResource BodyLargeFontWeight}" />
    </Style>

    <!--  Body Strong  -->
    <x:Double x:Key="BodyStrongFontSize">14</x:Double>
    <x:Double x:Key="BodyStrongLineHeight">20</x:Double>
    <FontWeight x:Key="BodyStrongFontWeight">SemiBold</FontWeight>
    <Style x:Key="BodyStrongTextBlockStyle" BasedOn="{StaticResource DefaultTextBlockStyle}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource BodyStrongFontSize}" />
        <Setter Property="LineHeight" Value="{StaticResource BodyStrongLineHeight}" />
        <Setter Property="FontWeight" Value="{StaticResource BodyStrongFontWeight}" />
    </Style>

    <!--  Body  -->
    <x:Double x:Key="BodyFontSize">14</x:Double>
    <x:Double x:Key="BodyLineHeight">20</x:Double>
    <FontWeight x:Key="BodyFontWeight">Normal</FontWeight>
    <Style x:Key="BodyTextBlockStyle" BasedOn="{StaticResource DefaultTextBlockStyle}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource BodyFontSize}" />
        <Setter Property="LineHeight" Value="{StaticResource BodyLineHeight}" />
        <Setter Property="FontWeight" Value="{StaticResource BodyFontWeight}" />
    </Style>

    <!--  Caption Strong  -->
    <x:Double x:Key="CaptionStrongFontSize">12</x:Double>
    <x:Double x:Key="CaptionStrongLineHeight">16</x:Double>
    <FontWeight x:Key="CaptionStrongFontWeight">SemiBold</FontWeight>
    <Style x:Key="CaptionStrongTextBlockStyle" BasedOn="{StaticResource DefaultTextBlockStyle}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource CaptionStrongFontSize}" />
        <Setter Property="LineHeight" Value="{StaticResource CaptionStrongLineHeight}" />
        <Setter Property="FontWeight" Value="{StaticResource CaptionStrongFontWeight}" />
    </Style>

    <!--  Caption  -->
    <x:Double x:Key="CaptionFontSize">12</x:Double>
    <x:Double x:Key="CaptionLineHeight">16</x:Double>
    <FontWeight x:Key="CaptionFontWeight">Normal</FontWeight>
    <Style x:Key="CaptionTextBlockStyle" BasedOn="{StaticResource DefaultTextBlockStyle}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource CaptionFontSize}" />
        <Setter Property="LineHeight" Value="{StaticResource CaptionLineHeight}" />
        <Setter Property="FontWeight" Value="{StaticResource CaptionFontWeight}" />
    </Style>
</ResourceDictionary>