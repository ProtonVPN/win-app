<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.ThemeDictionaries>

        <ResourceDictionary x:Key="Light">

            <BitmapImage x:Key="WelcomeIllustrationSource"
                         UriSource="ms-appx:///ProtonVPN.Client.Common.UI/Assets/Illustrations/Light/welcome.jpg" />
            <SvgImageSource x:Key="ProductLogoIllustrationSource"
                            UriSource="ms-appx:///ProtonVPN.Client.Common.UI/Assets/Illustrations/Light/product-logo.svg" />
        </ResourceDictionary>

        <ResourceDictionary x:Key="Dark">

            <BitmapImage x:Key="WelcomeIllustrationSource"
                         UriSource="ms-appx:///ProtonVPN.Client.Common.UI/Assets/Illustrations/Dark/welcome.jpg" />
            <SvgImageSource x:Key="ProductLogoIllustrationSource"
                            UriSource="ms-appx:///ProtonVPN.Client.Common.UI/Assets/Illustrations/Dark/product-logo.svg" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

    <BitmapImage x:Key="ReportSentIllustrationSource"
                 UriSource="ms-appx:///ProtonVPN.Client.Common.UI/Assets/Illustrations/report-success.png" />
    <BitmapImage x:Key="ReportErrorIllustrationSource"
                 UriSource="ms-appx:///ProtonVPN.Client.Common.UI/Assets/Illustrations/report-error.png" />
</ResourceDictionary>