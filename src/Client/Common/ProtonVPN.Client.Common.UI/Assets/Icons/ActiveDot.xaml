<base:IconUserControl x:Class="ProtonVPN.Client.Common.UI.Assets.Icons.ActiveDot"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:base="using:ProtonVPN.Client.Common.UI.Assets.Icons.Base"
                      mc:Ignorable="d">
    <Viewbox Stretch="{x:Bind Stretch, Mode=OneWay}">
        <Canvas Width="16" Height="16">
            <Ellipse Canvas.Left="0" Canvas.Top="0" Width="16" Height="16" Fill="#FF27DDB1" Opacity="0.2" />
            <Ellipse Canvas.Left="5" Canvas.Top="5" Width="6" Height="6" Fill="#FF27DDB1" />
        </Canvas>
    </Viewbox>
</base:IconUserControl>