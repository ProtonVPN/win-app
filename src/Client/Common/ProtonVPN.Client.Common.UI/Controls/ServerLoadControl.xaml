<UserControl x:Class="ProtonVPN.Client.Common.UI.Controls.ServerLoadControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="32"
             Height="4"
             x:DefaultBindMode="OneWay"
             Background="{StaticResource BackgroundStrongColorBrush}"
             CornerRadius="2"
             mc:Ignorable="d">

    <Grid Width="{x:Bind Width}"
          Height="{x:Bind Height}"
          Background="{x:Bind Background}"
          CornerRadius="{x:Bind CornerRadius}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="PART_FillColumn" />
            <ColumnDefinition x:Name="PART_EmptyColumn" />
        </Grid.ColumnDefinitions>

        <Border x:Name="PART_ServerLoadIndicator"
                Grid.Column="0"
                Background="{StaticResource TextNormColorBrush}"
                CornerRadius="{x:Bind CornerRadius}">
            <Border.BackgroundTransition>
                <BrushTransition Duration="0:0:0.5" />
            </Border.BackgroundTransition>
        </Border>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="ServerLoadStates">
                <VisualState x:Name="LowServerLoad">
                    <VisualState.Setters>
                        <Setter Target="PART_ServerLoadIndicator.Background" Value="{StaticResource SignalSuccessColorBrush}" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="MediumServerLoad">
                    <VisualState.Setters>
                        <Setter Target="PART_ServerLoadIndicator.Background" Value="{StaticResource SignalWarningColorBrush}" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="HighServerLoad">
                    <VisualState.Setters>
                        <Setter Target="PART_ServerLoadIndicator.Background" Value="{StaticResource SignalDangerColorBrush}" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</UserControl>