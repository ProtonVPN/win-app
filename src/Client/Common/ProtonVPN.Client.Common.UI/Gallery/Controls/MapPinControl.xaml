<UserControl x:Class="ProtonVPN.Client.Common.UI.Gallery.Controls.MapPinControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Ellipse Width="{x:Bind PinSize, Mode=OneWay}"
             Height="{x:Bind PinSize, Mode=OneWay}"
             Fill="{x:Bind PinBrush, Mode=OneWay}"
             Stroke="White"
             StrokeThickness="{x:Bind PinStrokeThickness, Mode=OneWay}" />
</UserControl>