<UserControl x:Class="ProtonVPN.Client.Common.UI.Gallery.Pages.VpnSpecificPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:ProtonVPN.Client.Common.UI.Controls"
             xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gallery="using:ProtonVPN.Client.Common.UI.Gallery.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pages="using:ProtonVPN.Client.Common.UI.Gallery.Pages"
             xmlns:pathicons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
             xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
             Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///ProtonVPN.Client.Common.UI/Gallery/GalleryStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="gallery:SampleControl">
                <Setter Property="Margin" Value="0,12,0,0" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel x:Name="ContentArea"
                Margin="16,8">

        <gallery:SampleControl Header="User Location">
            <controls:DeviceLocationControl Country="{Binding Text, ElementName=tbCountry, Mode=OneWay}"
                                            IpAddress="{Binding Text, ElementName=tbIpAddress, Mode=OneWay}"
                                            IsLocationHidden="{Binding IsChecked, ElementName=rbConnected, Mode=OneWay}"
                                            IsLocationVisible="{Binding IsChecked, ElementName=rbDisconnected, Mode=OneWay}"
                                            IsScrambling="{Binding IsChecked, ElementName=rbConnecting, Mode=OneWay}" />
            <gallery:SampleControl.Options>
                <StackPanel Orientation="Vertical"
                            Spacing="4">
                    <TextBox Name="tbCountry"
                             PlaceholderText="Country"
                             Text="Lithuania" />
                    <TextBox Name="tbIpAddress"
                             PlaceholderText="Ip Address"
                             Text="158.6.140.191" />
                    <RadioButton Name="rbDisconnected"
                                 Margin="4,4,0,0"
                                 Content="Disconnected"
                                 GroupName="ConnectionStatusGroup"
                                 IsChecked="True" />
                    <RadioButton Name="rbConnecting"
                                 Margin="4,4,0,0"
                                 Content="Connecting"
                                 GroupName="ConnectionStatusGroup" />
                    <RadioButton Name="rbConnected"
                                 Margin="4,4,0,0"
                                 Content="Connected"
                                 GroupName="ConnectionStatusGroup" />
                </StackPanel>
            </gallery:SampleControl.Options>
        </gallery:SampleControl>

        <gallery:SampleControl Header="Country Flag">
            <controls:CountryFlagControl EntryCountryCode="{Binding Text, ElementName=tbEntryCountryCode, Mode=OneWay}"
                                         ExitCountryCode="{Binding Text, ElementName=tbCountryCode, Mode=OneWay}"
                                         IsCompact="{Binding IsChecked, ElementName=cbCompactFlag, Mode=OneWay}"
                                         IsGateway="{Binding IsChecked, ElementName=cbGateway, Mode=OneWay}"
                                         IsSecureCore="{Binding IsChecked, ElementName=cbSecureCore, Mode=OneWay}" />
            <gallery:SampleControl.Options>
                <StackPanel Orientation="Vertical"
                            Spacing="4">
                    <TextBox Name="tbCountryCode"
                             PlaceholderText="Country Code"
                             Text="AD" />
                    <TextBox Name="tbEntryCountryCode"
                             PlaceholderText="Entry Country Code"
                             Text="" />
                    <CheckBox Name="cbSecureCore"
                              Margin="4,4,0,0"
                              Content="Is Secure Core" />
                    <CheckBox Name="cbGateway"
                              Margin="4,4,0,0"
                              Content="Is Gateway" />
                    <CheckBox Name="cbCompactFlag"
                              Margin="4,4,0,0"
                              Content="Is Compact" />
                    <Border Height="160" />
                </StackPanel>
            </gallery:SampleControl.Options>
        </gallery:SampleControl>

        <gallery:SampleControl Header="Server load">
            <controls:ServerLoadControl FirstThreshold="{Binding RangeStart, ElementName=rsThresholds, Mode=OneWay}"
                                        SecondThreshold="{Binding RangeEnd, ElementName=rsThresholds, Mode=OneWay}"
                                        Value="{Binding Value, ElementName=slServerLoad, Mode=OneWay}" />
            <gallery:SampleControl.Options>
                <StackPanel Orientation="Vertical"
                            Spacing="4">
                    <TextBlock Text="Thresholds" />
                    <toolkit:RangeSelector x:Name="rsThresholds"
                                           Maximum="1"
                                           Minimum="0"
                                           RangeEnd="0.901"
                                           RangeStart="0.751"
                                           StepFrequency="0.05" />
                    <Slider x:Name="slServerLoad"
                            Header="Server load"
                            Maximum="1"
                            Minimum="0"
                            StepFrequency="0.01"
                            Value="0.6" />
                </StackPanel>
            </gallery:SampleControl.Options>
        </gallery:SampleControl>

        <gallery:SampleControl Header="Dual Commands Row">
            <StackPanel Width="400"
                        Orientation="Vertical">
                <ItemsControl x:DefaultBindMode="OneTime"
                              ItemsSource="{x:Bind FakeIntents, Mode=OneTime}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="pages:FakeIntent">
                            <custom:DualCommandsRow IsContentEnabled="{Binding IsChecked, ElementName=cbContentEnabled}"
                                                    SecondaryCommandIcon="{x:Bind SecondaryIcon}"
                                                    SecondaryCommandText="{x:Bind SecondaryButton}"
                                                    PrimaryCommandContent="{x:Bind PrimaryButton}">
                                <Grid ColumnDefinitions="Auto,*"
                                      ColumnSpacing="8">
                                    <controls:CountryFlagControl Grid.Column="0"
                                                     EntryCountryCode="{x:Bind EntryCountryCode}"
                                                     ExitCountryCode="{x:Bind ExitCountryCode}" 
                                                     IsSecureCore="{x:Bind IsSecureCore}"
                                                                 IsGateway="{x:Bind IsGateway}"
                                                     IsCompact="True"/>
                                    <TextBlock Grid.Column="1"
                                               VerticalAlignment="Center"
                                               Text="{x:Bind Title}"
                                               TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </custom:DualCommandsRow>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <custom:DualCommandsRow IsContentEnabled="{Binding IsChecked, ElementName=cbContentEnabled}"
                                        SecondaryCommandText="Cities">
                    <Grid ColumnDefinitions="Auto,Auto,*"
                          ColumnSpacing="8">
                        <controls:CountryFlagControl Grid.Column="0"
                                                     EntryCountryCode="SE"
                                                     ExitCountryCode="AU" 
                                                     IsSecureCore="True"
                                                     IsCompact="True"/>
                        <TextBlock Grid.Column="1"
                                   VerticalAlignment="Center"
                                   Text="Australia" />
                        <TextBlock Grid.Column="2"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource TextWeakColorBrush}"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Text="- via Sweden"
                                   TextTrimming="CharacterEllipsis" />
                    </Grid>
                    <custom:DualCommandsRow.PrimaryCommandContent>
                        <Image HorizontalAlignment="Center"
                               Height="20"
                               Source="{ThemeResource VpnPlusIllustrationSource}" />
                    </custom:DualCommandsRow.PrimaryCommandContent>
                    <custom:DualCommandsRow.SecondaryCommandIcon>
                        <pathicons:ChevronRight />
                    </custom:DualCommandsRow.SecondaryCommandIcon>
                </custom:DualCommandsRow>
                
                <custom:DualCommandsRow IsContentEnabled="{Binding IsChecked, ElementName=cbContentEnabled}"
                                        SecondaryCommandText="Servers"
                                        PrimaryCommandContent="Connect">
                    <Grid ColumnDefinitions="Auto,*"
                          ColumnSpacing="8">
                        <pathicons:MapPin Grid.Column="0"/>
                        <TextBlock Grid.Column="1"
                                   VerticalAlignment="Center"
                                   Text="Madrid" />
                    </Grid>
                    <custom:DualCommandsRow.SecondaryCommandIcon>
                        <pathicons:ThreeDotsVertical />
                    </custom:DualCommandsRow.SecondaryCommandIcon>
                </custom:DualCommandsRow>                
            </StackPanel>
            <gallery:SampleControl.Options>
                <StackPanel Orientation="Vertical"
                            Spacing="4">
                    <CheckBox x:Name="cbContentEnabled"
                              Content="Is Row Content Enabled"
                              IsChecked="True" />
                </StackPanel>
            </gallery:SampleControl.Options>
        </gallery:SampleControl>
    </StackPanel>
</UserControl>