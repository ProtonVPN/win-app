<UserControl x:Class="ProtonVPN.Client.Common.UI.Gallery.Pages.VpnSpecificPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:ProtonVPN.Client.Common.UI.Controls"
             xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gallery="using:ProtonVPN.Client.Common.UI.Gallery.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pages="using:ProtonVPN.Client.Common.UI.Gallery.Pages"
             xmlns:pathicons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
             xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
             x:DefaultBindMode="OneWay"
             Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///ProtonVPN.Client.Common.UI/Gallery/GalleryStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="gallery:SampleControl">
                <Setter Property="Margin" Value="0,12,0,0" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel x:Name="ContentArea"
                Margin="16,8">

        <gallery:SampleControl Header="Server load">
            <controls:ServerLoadControl FirstThreshold="{Binding RangeStart, ElementName=rsThresholds, Mode=OneWay}"
                                        SecondThreshold="{Binding RangeEnd, ElementName=rsThresholds, Mode=OneWay}"
                                        Value="{Binding Value, ElementName=slServerLoad, Mode=OneWay}" />
            <gallery:SampleControl.Options>
                <StackPanel Orientation="Vertical"
                            Spacing="4">
                    <TextBlock Text="Thresholds" />
                    <toolkit:RangeSelector x:Name="rsThresholds"
                                           Maximum="1"
                                           Minimum="0"
                                           RangeEnd="0.901"
                                           RangeStart="0.751"
                                           StepFrequency="0.05" />
                    <Slider x:Name="slServerLoad"
                            Header="Server load"
                            Maximum="1"
                            Minimum="0"
                            StepFrequency="0.01"
                            Value="0.6" />
                </StackPanel>
            </gallery:SampleControl.Options>
        </gallery:SampleControl>

        <gallery:SampleControl Header="Dual Commands Row">
            <StackPanel Width="400"
                        Orientation="Vertical">
                <ItemsControl x:DefaultBindMode="OneTime"
                              ItemsSource="{x:Bind FakeIntents, Mode=OneTime}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="pages:FakeIntent">
                            <custom:DualCommandsRow IsContentEnabled="{Binding IsChecked, ElementName=cbContentEnabled}"
                                                    PrimaryCommandContent="{x:Bind PrimaryButton}"
                                                    SecondaryCommandIcon="{x:Bind SecondaryIcon}"
                                                    SecondaryCommandText="{x:Bind SecondaryButton}">
                                <Grid ColumnDefinitions="Auto,*"
                                      ColumnSpacing="8">
                                    <custom:ComplexCountryFlag Grid.Column="0"
                                                               EntryCountryCode="{x:Bind EntryCountryCode}"
                                                               ExitCountryCode="{x:Bind ExitCountryCode}"
                                                               IsCompact="True"
                                                               IsSecureCore="{x:Bind IsSecureCore}" />
                                    <TextBlock Grid.Column="1"
                                               VerticalAlignment="Center"
                                               Text="{x:Bind Title}"
                                               TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </custom:DualCommandsRow>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <custom:DualCommandsRow IsContentEnabled="{Binding IsChecked, ElementName=cbContentEnabled}"
                                        SecondaryCommandText="Cities">
                    <Grid ColumnDefinitions="Auto,Auto,*"
                          ColumnSpacing="8">
                        <custom:ComplexCountryFlag Grid.Column="0"
                                                   EntryCountryCode="SE"
                                                   ExitCountryCode="AU"
                                                   IsCompact="True"
                                                   IsSecureCore="True" />
                        <TextBlock Grid.Column="1"
                                   VerticalAlignment="Center"
                                   Text="Australia" />
                        <TextBlock Grid.Column="2"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource TextWeakColorBrush}"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Text="- via Sweden"
                                   TextTrimming="CharacterEllipsis" />
                    </Grid>
                    <custom:DualCommandsRow.PrimaryCommandContent>
                        <Image Height="20"
                               HorizontalAlignment="Center"
                               Source="{ThemeResource VpnPlusIllustrationSource}" />
                    </custom:DualCommandsRow.PrimaryCommandContent>
                    <custom:DualCommandsRow.SecondaryCommandIcon>
                        <pathicons:ChevronRight />
                    </custom:DualCommandsRow.SecondaryCommandIcon>
                </custom:DualCommandsRow>

                <custom:DualCommandsRow IsContentEnabled="{Binding IsChecked, ElementName=cbContentEnabled}"
                                        PrimaryCommandContent="Connect"
                                        SecondaryCommandText="Servers">
                    <Grid ColumnDefinitions="Auto,*"
                          ColumnSpacing="8">
                        <pathicons:MapPin Grid.Column="0" />
                        <TextBlock Grid.Column="1"
                                   VerticalAlignment="Center"
                                   Text="Madrid" />
                    </Grid>
                    <custom:DualCommandsRow.SecondaryCommandIcon>
                        <pathicons:ThreeDotsVertical />
                    </custom:DualCommandsRow.SecondaryCommandIcon>
                </custom:DualCommandsRow>
            </StackPanel>
            <gallery:SampleControl.Options>
                <StackPanel Orientation="Vertical"
                            Spacing="4">
                    <CheckBox x:Name="cbContentEnabled"
                              Content="Is Row Content Enabled"
                              IsChecked="True" />
                </StackPanel>
            </gallery:SampleControl.Options>
        </gallery:SampleControl>

        <gallery:SampleControl Header="Info Bar">
            <StackPanel MaxWidth="500"
                        Spacing="8">
                <InfoBar x:Name="infobar1"
                         Title="{x:Bind tbInfoBarTitle.Text}"
                         IsClosable="{x:Bind cbInfoBarClose.IsChecked.Value}"
                         IsIconVisible="{x:Bind cbInfoBarIcon.IsChecked.Value}"
                         IsOpen="{Binding IsChecked, ElementName=cbInfoBarOpen, Mode=TwoWay}"
                         Message="{x:Bind tbInfoBarDescription.Text}">
                    <Image Source="{StaticResource UpdateProtonVpnIllustrationSource}"
                           Stretch="Uniform" />
                    <InfoBar.ActionButton>
                        <custom:GhostButton Content="{Binding Text, ElementName=tbInfoBarAction, Mode=OneWay}"
                                            Style="{StaticResource PrimaryGhostButtonStyle}"
                                            Visibility="{Binding Text, ElementName=tbInfoBarAction, Mode=OneWay, Converter={StaticResource NotNullToVisibilityConverter}}" />
                    </InfoBar.ActionButton>
                </InfoBar>

                <InfoBar x:Name="infobar2"
                         Title="{x:Bind tbInfoBarTitle.Text}"
                         IsClosable="{x:Bind cbInfoBarClose.IsChecked.Value}"
                         IsIconVisible="{x:Bind cbInfoBarIcon.IsChecked.Value}"
                         IsOpen="{Binding IsChecked, ElementName=cbInfoBarOpen, Mode=TwoWay}"
                         Message="{x:Bind tbInfoBarDescription.Text}">
                    <InfoBar.ActionButton>
                        <custom:GhostButton Content="{Binding Text, ElementName=tbInfoBarAction, Mode=OneWay}"
                                            Style="{StaticResource PrimaryGhostButtonStyle}"
                                            Visibility="{Binding Text, ElementName=tbInfoBarAction, Mode=OneWay, Converter={StaticResource NotNullToVisibilityConverter}}" />
                    </InfoBar.ActionButton>
                </InfoBar>
            </StackPanel>
            <gallery:SampleControl.Options>
                <StackPanel MaxWidth="300"
                            Orientation="Vertical"
                            Spacing="4">
                    <CheckBox Name="cbInfoBarOpen"
                              Margin="4,0,0,8"
                              Content="Is Open"
                              IsChecked="True"
                              IsThreeState="False" />
                    <ComboBox x:Name="cboxInfoBarSeverity"
                              ItemsSource="{x:Bind InfoBarSeverities, Mode=OneTime}"
                              SelectedIndex="0"
                              SelectionChanged="OnSeveritySelectionChanged" />
                    <TextBox Name="tbInfoBarTitle"
                             PlaceholderText="Info bar title"
                             Text="Title goes here" />
                    <TextBox Name="tbInfoBarDescription"
                             PlaceholderText="Info bar description"
                             Text="Description or message that explains what has happened goes here"
                             TextWrapping="Wrap" />
                    <TextBox Name="tbInfoBarAction"
                             PlaceholderText="Action"
                             Text="Action" />
                    <CheckBox Name="cbInfoBarIcon"
                              Margin="4,4,0,0"
                              Content="Is Icon Visible"
                              IsChecked="True" />
                    <CheckBox Name="cbInfoBarClose"
                              Margin="4,4,0,0"
                              Content="Is Closable"
                              IsChecked="True" />
                </StackPanel>
            </gallery:SampleControl.Options>
        </gallery:SampleControl>

        <gallery:SampleControl Header="Prominent banner">

            <StackPanel Orientation="Horizontal"
                        Spacing="16">
                <custom:ProminentBannerControl x:Name="prominentBanner1"
                                               Width="{x:Bind slBannerWidth.Value}"
                                               VerticalAlignment="Center"
                                               ActionButtonText="{x:Bind tbBannerAction.Text}"
                                               Description="{x:Bind tbBannerDescription.Text}"
                                               Footer="{x:Bind tbBannerFooter.Text}"
                                               Header="{x:Bind tbBannerTitle.Text}"
                                               IsExpanded="{x:Bind cbBannerExpanded.IsChecked.Value}"
                                               IsActionButtonVisible="{x:Bind cbBannerAction.IsChecked.Value}"
                                               IsDismissButtonVisible="{x:Bind cbBannerDismiss.IsChecked.Value}" 
                                               IconSource="{StaticResource PlaceholderIllustrationSource}"
                                               LargeIllustrationSource="{StaticResource PlaceholderIllustrationSource}"
                                               SmallIllustrationSource="{StaticResource PlaceholderIllustrationSource}" />
                <custom:ProminentBannerControl x:Name="prominentBanner2"
                                               Width="{x:Bind slBannerWidth.Value}"
                                               VerticalAlignment="Center"
                                               ActionButtonText="{x:Bind tbBannerAction.Text}"
                                               Description="{x:Bind tbBannerDescription.Text}"
                                               Footer="{x:Bind tbBannerFooter.Text}"
                                               Header="{x:Bind tbBannerTitle.Text}"
                                               IsExpanded="{x:Bind cbBannerExpanded.IsChecked.Value}"
                                               IsActionButtonVisible="{x:Bind cbBannerAction.IsChecked.Value}"
                                               IsDismissButtonVisible="{x:Bind cbBannerDismiss.IsChecked.Value}" 
                                               IconSource="{StaticResource PlaceholderIllustrationSource}"/>
            </StackPanel>

            <gallery:SampleControl.Options>
                <StackPanel MaxWidth="300"
                            Orientation="Vertical"
                            Spacing="4">
                    <ComboBox x:Name="cboxBannerStyle"
                              ItemsSource="{x:Bind ProminentBannerStyles, Mode=OneTime}"
                              SelectedIndex="0"
                              SelectionChanged="OnBannerStyleSelectionChanged" />
                    <TextBox Name="tbBannerTitle"
                             PlaceholderText="Banner title"
                             Text="Title goes here" />
                    <TextBox Name="tbBannerDescription"
                             PlaceholderText="Banner description"
                             Text="Description or message that explains what has happened goes here"
                             TextWrapping="Wrap" />
                    <TextBox Name="tbBannerFooter"
                             PlaceholderText="Banner footer"
                             Text="6 days 22 hours left"
                             TextWrapping="Wrap" />
                    <TextBox Name="tbBannerAction"
                             PlaceholderText="Action"
                             Text="Action" />
                    <CheckBox Name="cbBannerAction"
                              Margin="4,4,0,0"
                              Content="Is action button visible"
                              IsChecked="True" />
                    <CheckBox Name="cbBannerDismiss"
                              Margin="4,4,0,0"
                              Content="Is dismiss button visible"
                              IsChecked="True" />
                    <Slider x:Name="slBannerWidth"
                            Header="Banner width"
                            Maximum="350"
                            Minimum="250"
                            StepFrequency="1"
                            Value="300" />
                    <CheckBox Name="cbBannerExpanded"
                              Margin="4,4,0,0"
                              Content="Is expanded"
                              IsChecked="True" />
                </StackPanel>
            </gallery:SampleControl.Options>
        </gallery:SampleControl>

    </StackPanel>
</UserControl>