<UserControl x:Class="ProtonVPN.Client.Common.UI.Gallery.Pages.VpnSpecificPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:toolkit="using:CommunityToolkit.WinUI.UI.Controls"
             xmlns:controls="using:ProtonVPN.Client.Common.UI.Controls"
             xmlns:gallery="using:ProtonVPN.Client.Common.UI.Gallery.Controls"
             Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///ProtonVPN.Client.Common.UI/Gallery/GalleryStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="gallery:SampleControl">
                <Setter Property="Margin" Value="0,12,0,0" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel x:Name="ContentArea"
                Margin="16,8">

        <gallery:SampleControl Header="User Location">
            <controls:UserLocationControl Country="{Binding Text, ElementName=tbCountry, Mode=OneWay}"
                                          IpAddress="{Binding Text, ElementName=tbIpAddress, Mode=OneWay}"
                                          IsLocationHidden="{Binding IsChecked, ElementName=rbConnected, Mode=OneWay}"
                                          IsLocationVisible="{Binding IsChecked, ElementName=rbDisconnected, Mode=OneWay}"
                                          IsScrambling="{Binding IsChecked, ElementName=rbConnecting, Mode=OneWay}" />
            <gallery:SampleControl.Options>
                <StackPanel Orientation="Vertical"
                            Spacing="4">
                    <TextBox Name="tbCountry"
                             PlaceholderText="Country"
                             Text="Lithuania" />
                    <TextBox Name="tbIpAddress"
                             PlaceholderText="Ip Address"
                             Text="158.6.140.191" />
                    <RadioButton Name="rbDisconnected"
                                 Margin="4,4,0,0"
                                 Content="Disconnected"
                                 GroupName="ConnectionStatusGroup"
                                 IsChecked="True" />
                    <RadioButton Name="rbConnecting"
                                 Margin="4,4,0,0"
                                 Content="Connecting"
                                 GroupName="ConnectionStatusGroup" />
                    <RadioButton Name="rbConnected"
                                 Margin="4,4,0,0"
                                 Content="Connected"
                                 GroupName="ConnectionStatusGroup" />
                </StackPanel>
            </gallery:SampleControl.Options>
        </gallery:SampleControl>

        <gallery:SampleControl Header="Country Flag">
            <controls:CountryFlagControl EntryCountryCode="{Binding Text, ElementName=tbEntryCountryCode, Mode=OneWay}"
                                         ExitCountryCode="{Binding Text, ElementName=tbCountryCode, Mode=OneWay}"
                                         IsCompact="{Binding IsChecked, ElementName=cbCompactFlag, Mode=OneWay}"
                                         IsSecureCore="{Binding IsChecked, ElementName=cbSecureCore, Mode=OneWay}" 
                                         IsGateway="{Binding IsChecked, ElementName=cbGateway, Mode=OneWay}" />
            <gallery:SampleControl.Options>
                <StackPanel Orientation="Vertical"
                            Spacing="4">
                    <TextBox Name="tbCountryCode"
                             PlaceholderText="Country Code"
                             Text="AD" />
                    <TextBox Name="tbEntryCountryCode"
                             PlaceholderText="Entry Country Code"
                             Text="" />
                    <CheckBox Name="cbSecureCore"
                              Margin="4,4,0,0"
                              Content="Is Secure Core" />
                    <CheckBox Name="cbGateway"
                              Margin="4,4,0,0"
                              Content="Is Gateway" />
                    <CheckBox Name="cbCompactFlag"
                              Margin="4,4,0,0"
                              Content="Is Compact" />
                    <Border Height="160" />
                </StackPanel>
            </gallery:SampleControl.Options>
        </gallery:SampleControl>

        <gallery:SampleControl Header="Server load">
            <controls:ServerLoadControl FirstThreshold="{Binding RangeStart, ElementName=rsThresholds, Mode=OneWay}"
                                        SecondThreshold="{Binding RangeEnd, ElementName=rsThresholds, Mode=OneWay}"
                                        Value="{Binding Value, ElementName=slServerLoad, Mode=OneWay}" />
            <gallery:SampleControl.Options>
                <StackPanel Orientation="Vertical"
                            Spacing="4">
                    <TextBlock Text="Thresholds" />
                    <toolkit:RangeSelector x:Name="rsThresholds"
                                           Maximum="1"
                                           Minimum="0"
                                           RangeEnd="0.901"
                                           RangeStart="0.751"
                                           StepFrequency="0.05" />
                    <Slider x:Name="slServerLoad"
                            Header="Server load"
                            Maximum="1"
                            Minimum="0"
                            StepFrequency="0.01"
                            Value="0.6" />
                </StackPanel>
            </gallery:SampleControl.Options>
        </gallery:SampleControl>
    </StackPanel>
</UserControl>