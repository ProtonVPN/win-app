<wex:WindowEx x:Class="ProtonVPN.Client.MainWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:icons="using:ProtonVPN.Client.Common.UI.Assets.Icons"
              xmlns:wex="using:WinUIEx"
              Width="636"
              Height="589"
              MinWidth="376"
              MinHeight="489"
              Activated="OnActivated"
              Closed="OnWindowClosed"
              PersistenceId="MainWindow"
              mc:Ignorable="d">

    <!--  There's a consistent difference between the size defined here and the actual size  -->
    <!--  Adds 16px to the width and 9px to the height to compensate  -->

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="BaseAlt" />
    </Window.SystemBackdrop>

    <Grid Background="{ThemeResource WindowBackgroundColorBrush}">

        <Grid x:Name="AppTitleBar"
              Height="{StaticResource TitleBarHeight}"
              Margin="{StaticResource TitleBarMargin}"
              Padding="4"
              VerticalAlignment="Top"
              Canvas.ZIndex="1"
              ColumnSpacing="12"
              SizeChanged="OnAppTitleBarSizeChanged">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="{StaticResource TitleBarButtonsTotalLength}" />
            </Grid.ColumnDefinitions>

            <Image x:Name="ApplicationIcon"
                   Grid.Column="0"
                   Width="16"
                   Height="16"
                   VerticalAlignment="Center"
                   AutomationProperties.AutomationId="ApplicationIcon"
                   Source="/Assets/ProtonVPN.ico" />

            <TextBlock x:Name="AppTitleBarText"
                       Grid.Column="1"
                       VerticalAlignment="Center"
                       AutomationProperties.AutomationId="ApplicationTitleLabel"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Text="{Binding Content.ViewModel.Title, ElementName=Container}"
                       TextTrimming="CharacterEllipsis"
                       TextWrapping="NoWrap" />
        </Grid>

        <icons:LoadingLogo x:Name="LoadingLogo"
                           Width="120"
                           Height="120"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Stretch="Uniform" />

        <ContentControl x:Name="Container"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch" />

    </Grid>
</wex:WindowEx>