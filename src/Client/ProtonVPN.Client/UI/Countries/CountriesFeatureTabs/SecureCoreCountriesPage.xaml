<Page x:Class="ProtonVPN.Client.UI.Countries.CountriesFeatureTabs.SecureCoreCountriesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="using:ProtonVPN.Client.UI.Countries.Controls"
      NavigationCacheMode="Required"
      x:DefaultBindMode="OneWay"
      mc:Ignorable="d">

    <StackPanel>
        <controls:CountryListControl Countries="{x:Bind ViewModel.Countries}"
                                     InfoLabel="{x:Bind ViewModel.Localizer.Get('Countries_Info')}"
                                     ShowInfoOverlayCommand="{x:Bind ViewModel.ShowInfoOverlayCommand, Mode=OneTime}"
                                     Visibility="{x:Bind ViewModel.HasCountries, Converter={StaticResource BooleanToVisibilityConverter}}"
                                     Title="{x:Bind ViewModel.Localizer.GetFormat('Countries_SecureCoreCountries', ViewModel.TotalCountries)}"
                                     IsUpsellBannerVisible="{x:Bind ViewModel.IsUpsellBannerVisible}">
            <controls:CountryListControl.UpsellBanner>
                <controls:UpsellCountryBannerControl Image="{StaticResource SecureCoreSmallIllustrationSource}"
                                                     Description="{x:Bind ViewModel.Localizer.Get('FreeConnections_SecureCoreUpsell')}"
                                                     Command="{x:Bind ViewModel.UpgradePlanCommand}"/>
            </controls:CountryListControl.UpsellBanner>
        </controls:CountryListControl>

        <controls:SecureCoreCountryListControl SecureCoreCountries="{x:Bind ViewModel.SecureCoreCountries}"
                                               Visibility="{x:Bind ViewModel.HasSecureCoreCountries, Converter={StaticResource BooleanToVisibilityConverter}}"
                                               Title="{x:Bind ViewModel.Localizer.GetFormat('Countries_NumberOfServers', ViewModel.SecureCoreCountries.Count)}" />

        <controls:NoSearchResultsView Visibility="{x:Bind ViewModel.HasItems, Converter={StaticResource NotBooleanToVisibilityConverter}}" />
    </StackPanel>
</Page>