<UserControl x:Class="ProtonVPN.Client.UI.Countries.Controls.CountryListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
             xmlns:countries="using:ProtonVPN.Client.UI.Countries"
             xmlns:pathIcons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
             xmlns:controls="using:ProtonVPN.Client.UI.Countries.Controls"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">

    <StackPanel>
        <Grid Margin="0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       Text="{x:Bind Title}"
                       Margin="8,0"
                       VerticalAlignment="Center"
                       Foreground="{ThemeResource TextWeakColorBrush}" />
            <custom:GhostButton x:Name="InfoButton"
                                Grid.Column="1"
                                Command="{x:Bind ShowInfoOverlayCommand, Mode=OneTime}"
                                Content="{x:Bind InfoLabel}"
                                Visibility="{x:Bind ShowInfoOverlayCommand, Converter={StaticResource NotNullToVisibilityConverter}}"
                                HorizontalAlignment="Right">
                <custom:GhostButton.RightIcon>
                    <pathIcons:InfoCircle />
                </custom:GhostButton.RightIcon>
            </custom:GhostButton>
        </Grid>

        <ItemsRepeater ItemsSource="{x:Bind Countries}">
            <ItemsRepeater.Layout>
                <StackLayout Spacing="8"
                             Orientation="Vertical" />
            </ItemsRepeater.Layout>
            <ItemsRepeater.ItemTemplate>
                <DataTemplate x:DataType="countries:CountryViewModel">
                    <controls:CountryRowControl CountryViewModel="{x:Bind}" />
                </DataTemplate>
            </ItemsRepeater.ItemTemplate>
        </ItemsRepeater>
    </StackPanel>
</UserControl>