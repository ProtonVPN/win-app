<UserControl x:Class="ProtonVPN.Client.UI.Countries.Controls.CountryRowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:ProtonVPN.Client.Common.UI.Controls"
             xmlns:pathIcons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
             xmlns:icons="using:ProtonVPN.Client.Common.UI.Assets.Icons"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">

    <controls:DualCommandsRowControl Padding="12,0"
                                     IsRowContentDisabled="{x:Bind CountryViewModel.IsUnderMaintenance}"
                                     PrimaryButtonAutomationId="{x:Bind CountryViewModel.ConnectButtonAutomationId}"
                                     PrimaryButtonAutomationName="{x:Bind CountryViewModel.ExitCountryName}"
                                     PrimaryCommand="{x:Bind CountryViewModel.ConnectCommand}"
                                     PrimaryCommandText="{x:Bind CountryViewModel.Localizer.Get('Countries_Connect')}"
                                     SecondaryButtonAutomationId="{x:Bind CountryViewModel.NavigateToCountryButtonAutomationId}"
                                     SecondaryCommand="{x:Bind CountryViewModel.NavigateToCountryCommand}"
                                     SecondaryCommandText="{x:Bind CountryViewModel.SecondaryActionLabel}">

        <controls:DualCommandsRowControl.SecondaryCommandIcon>
            <pathIcons:ChevronRight Visibility="{x:Bind CountryViewModel.SecondaryActionLabel, Converter={StaticResource StringVisibilityConverter}}" />
        </controls:DualCommandsRowControl.SecondaryCommandIcon>

        <Grid ColumnSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <controls:CountryFlagControl Grid.Column="0"
                                         ExitCountryCode="{x:Bind CountryViewModel.ExitCountryCode}"
                                         IsCompact="False"
                                         IsSecureCore="{x:Bind CountryViewModel.IsSecureCore}" />
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        Spacing="8">
                <TextBlock Text="{x:Bind CountryViewModel.ExitCountryName}" />
                <icons:ActiveDot Width="16"
                                 Height="16"
                                 AutomationProperties.AutomationId="{x:Bind CountryViewModel.ActiveConnectionAutomationId}"
                                 Visibility="{x:Bind CountryViewModel.IsActiveConnection, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </StackPanel>

        </Grid>
    </controls:DualCommandsRowControl>
</UserControl>