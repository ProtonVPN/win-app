<UserControl x:Class="ProtonVPN.Client.UI.Countries.Controls.CountryRowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:ProtonVPN.Client.Common.UI.Controls"
             xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:icons="using:ProtonVPN.Client.Common.UI.Assets.Icons"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pathIcons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">

    <custom:DualCommandsRow Padding="12,0"
                            IsContentEnabled="{x:Bind CountryViewModel.IsEnabled}"
                            PrimaryCommandToolTip="{x:Bind CountryViewModel.PaidCountryWarningLabel}"
                            PrimaryCommand="{x:Bind CountryViewModel.ConnectCommand}"
                            PrimaryCommandAutomationId="{x:Bind CountryViewModel.ConnectButtonAutomationId}"
                            PrimaryCommandAutomationName="{x:Bind CountryViewModel.ConnectButtonAutomationName}"
                            SecondaryCommand="{x:Bind CountryViewModel.NavigateToCountryCommand}"
                            SecondaryCommandAutomationId="{x:Bind CountryViewModel.NavigateToCountryButtonAutomationId}"
                            SecondaryCommandText="{x:Bind CountryViewModel.SecondaryActionLabel}">
        <custom:DualCommandsRow.PrimaryCommandContent>
            <Grid>
                <Image Height="20"
                       HorizontalAlignment="Center"
                       Source="{ThemeResource VpnPlusIllustrationSource}"
                       Visibility="{x:Bind CountryViewModel.IsFreeUser, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <Grid Visibility="{x:Bind CountryViewModel.IsFreeUser, Converter={StaticResource NotBooleanToVisibilityConverter}}">
                    <TextBlock Text="{x:Bind CountryViewModel.Localizer.Get('Common_Actions_Connect')}"
                               Visibility="{x:Bind CountryViewModel.IsActiveConnection, Converter={StaticResource NotBooleanToVisibilityConverter}}" />
                    <TextBlock Text="{x:Bind CountryViewModel.Localizer.Get('Common_Actions_Disconnect')}"
                               Visibility="{x:Bind CountryViewModel.IsActiveConnection, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </Grid>
            </Grid>
        </custom:DualCommandsRow.PrimaryCommandContent>

        <custom:DualCommandsRow.SecondaryCommandIcon>
            <pathIcons:ChevronRight Visibility="{x:Bind CountryViewModel.SecondaryActionLabel, Converter={StaticResource StringVisibilityConverter}}" />
        </custom:DualCommandsRow.SecondaryCommandIcon>

        <Grid ColumnSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <controls:CountryFlagControl Grid.Column="0"
                                         EntryCountryCode="{x:Bind CountryViewModel.EntryCountryCode}"
                                         ExitCountryCode="{x:Bind CountryViewModel.ExitCountryCode}"
                                         IsCompact="False"
                                         IsSecureCore="{x:Bind CountryViewModel.IsSecureCore}" />
            <StackPanel Grid.Column="1"
                        Margin="0,8"
                        Orientation="Horizontal"
                        Spacing="8">
                <StackPanel>
                    <TextBlock Text="{x:Bind CountryViewModel.ExitCountryName}" />
                    <TextBlock Foreground="{ThemeResource TextWeakColorBrush}"
                               Text="{x:Bind CountryViewModel.ViaEntryCountryLabel}"
                               Visibility="{x:Bind CountryViewModel.EntryCountryCode, Converter={StaticResource StringVisibilityConverter}}" />
                </StackPanel>
                <icons:ActiveDot Width="16"
                                 Height="16"
                                 AutomationProperties.AutomationId="{x:Bind CountryViewModel.ActiveConnectionAutomationId}"
                                 Visibility="{x:Bind CountryViewModel.IsActiveConnection, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </StackPanel>

        </Grid>
    </custom:DualCommandsRow>
</UserControl>