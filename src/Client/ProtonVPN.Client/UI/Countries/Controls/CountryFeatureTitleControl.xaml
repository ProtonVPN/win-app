<controls:ItemsListControlBase x:Class="ProtonVPN.Client.UI.Countries.Controls.CountryFeatureTitleControl"
                               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                               xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
                               xmlns:pathIcons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
                               xmlns:controls="using:ProtonVPN.Client.UI.Countries.Controls"
                               x:DefaultBindMode="OneWay"
                               mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0"
                   Text="{x:Bind Title}"
                   Margin="16,8,16,4"
                   Foreground="{ThemeResource TextWeakColorBrush}" />
        <custom:GhostButton Grid.Column="1"
                            Command="{x:Bind ShowInfoOverlayCommand, Mode=OneTime}"
                            Content="{x:Bind InfoLabel}"
                            Visibility="{x:Bind ShowInfoOverlayCommand, Converter={StaticResource NotNullToVisibilityConverter}}"
                            HorizontalAlignment="Right">
            <custom:GhostButton.RightIcon>
                <pathIcons:InfoCircle />
            </custom:GhostButton.RightIcon>
        </custom:GhostButton>
    </Grid>
</controls:ItemsListControlBase>