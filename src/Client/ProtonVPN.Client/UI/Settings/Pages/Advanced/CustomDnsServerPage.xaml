<Page x:Class="ProtonVPN.Client.UI.Settings.Pages.Advanced.CustomDnsServersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:labs="using:CommunityToolkit.Labs.WinUI"
      xmlns:pathicons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
      xmlns:controls="using:ProtonVPN.Client.Common.UI.Controls"
      xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
      xmlns:local="using:ProtonVPN.Client.UI.Settings.Pages.Advanced"
      x:DefaultBindMode="OneWay"
      mc:Ignorable="d">

    <controls:PageContentControl BackCommand="{x:Bind ViewModel.GoBackCommand, Mode=OneTime}"
                                 IsCompact="{x:Bind ViewModel.IsNavigationPaneCollapsed}"
                                 PageHeader="{x:Bind ViewModel.Title}">

        <StackPanel x:Name="ContentArea"
                    Spacing="16">
            <labs:SettingsCard Description="{x:Bind ViewModel.Localizer.Get('Settings_Connection_Advanced_CustomDnsServers_Description')}"
                               Header="{x:Bind ViewModel.Localizer.Get('Settings_Connection_Advanced_CustomDnsServers')}"
                               IsTabStop="False"
                               Style="{StaticResource DefaultSettingsCardStyle}">
                <ToggleSwitch IsOn="{x:Bind ViewModel.IsCustomDnsServersEnabled, Mode=TwoWay}"
                              Style="{StaticResource ToggleSwitchStyle}"/>
            </labs:SettingsCard>

            <StackPanel Spacing="8"
                        Visibility="{x:Bind ViewModel.IsCustomDnsServersEnabled}">

                <TextBlock Foreground="{StaticResource TextWeakColorBrush}"
                           Style="{StaticResource CaptionTextBlockStyle}"
                           Text="{x:Bind ViewModel.Localizer.GetFormat('Settings_Connection_Advanced_CustomDnsServers_Header', ViewModel.CustomDnsServersCount)}" />

                <labs:SettingsCard IsTabStop="False"
                                   Style="{StaticResource VerticalSettingsCardStyle}">
                    <Grid Margin="0,-8,0,0"
                          ColumnSpacing="8">
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        
                        <TextBox Grid.Row="0"
                                 Grid.Column="0"
                                 PlaceholderText="{x:Bind ViewModel.Localizer.Get('Settings_Connection_Advanced_CustomDnsServers_Watermark')}"
                                 Text="{x:Bind ViewModel.CurrentIpAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        
                        <Button Grid.Row="0"
                                Grid.Column="1"
                                Command="{x:Bind ViewModel.AddDnsServerCommand, Mode=OneTime}"
                                Content="{x:Bind ViewModel.Localizer.Get('Common_Actions_Add')}" />
                        
                        <ItemsRepeater Grid.Row="1"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       Margin="0,16,0,0"
                                       ItemsSource="{x:Bind ViewModel.CustomDnsServers}"
                                       Visibility="{x:Bind ViewModel.HasCustomDnsServers, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ItemsRepeater.Layout>
                                <StackLayout Spacing="8" />
                            </ItemsRepeater.Layout>
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="local:DnsServerViewModel">
                                    <Grid ColumnSpacing="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <CheckBox Grid.Column="0"
                                                  Content="{x:Bind IpAddress}"
                                                  IsChecked="{x:Bind IsActive, Mode=TwoWay}" />
                                        <custom:GhostButton Grid.Column="1"
                                                            Command="{x:Bind RemoveDnsServerCommand, Mode=OneTime}">
                                            <custom:GhostButton.LeftIcon>
                                                <pathicons:Trash />
                                            </custom:GhostButton.LeftIcon>
                                        </custom:GhostButton>
                                    </Grid>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </Grid>
                </labs:SettingsCard>
            </StackPanel>
        </StackPanel>
    </controls:PageContentControl>
</Page>