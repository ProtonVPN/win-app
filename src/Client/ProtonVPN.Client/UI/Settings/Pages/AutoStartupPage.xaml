<Page x:Class="ProtonVPN.Client.UI.Settings.Pages.AutoStartupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
      x:DefaultBindMode="OneWay"
      NavigationCacheMode="Enabled"
      mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="AutoLaunchRadioButtonStyle" BasedOn="{StaticResource RadioButtonStyle}" TargetType="RadioButton">
            <Setter Property="GroupName" Value="AutoLaunchSetting" />
        </Style>
        <Style x:Key="AutoConnectRadioButtonStyle" BasedOn="{StaticResource RadioButtonStyle}" TargetType="RadioButton">
            <Setter Property="GroupName" Value="AutoConnectSetting" />
        </Style>
    </Page.Resources>

    <custom:SettingsPageContentControl BackCommand="{x:Bind ViewModel.GoBackCommand, Mode=OneTime}"
                                       IsBackButtonVisible="{x:Bind ViewModel.IsBackEnabled}"
                                       IsCompact="{x:Bind ViewModel.IsNavigationPaneCollapsed}"
                                       PageHeader="{x:Bind ViewModel.Title}"
                                       ReconnectCommand="{x:Bind ViewModel.ReconnectCommand, Mode=OneTime}"
                                       ReconnectCommandText="{x:Bind ViewModel.Localizer.Get('Common_Actions_Reconnect')}">

        <StackPanel x:Name="ContentArea">

            <!-- TODO: Auto launch has not been implemented yet. Keep the settings card disabled for now. -->
            <toolkit:SettingsExpander Description="{x:Bind ViewModel.Localizer.Get('Settings_General_AutoStartup_AutoLaunch_Description')}"
                                      Header="{x:Bind ViewModel.Localizer.Get('Settings_General_AutoStartup_AutoLaunch')}"
                                      IsEnabled="False"
                                      IsExpanded="{x:Bind ViewModel.IsAutoLaunchEnabled}"
                                      IsTabStop="False">
                <ToggleSwitch IsOn="{x:Bind ViewModel.IsAutoLaunchEnabled, Mode=TwoWay}"
                              Style="{StaticResource ToggleSwitchStyle}" />
                <toolkit:SettingsExpander.Items>
                    <StackPanel Spacing="16">
                        <RadioButton Content="{x:Bind ViewModel.Localizer.Get('Settings_General_AutoStartup_AutoLaunch_Desktop')}"
                                     IsChecked="{x:Bind ViewModel.IsAutoLaunchOpenOnDesktop, Mode=TwoWay}"
                                     Style="{StaticResource AutoLaunchRadioButtonStyle}" />
                        <RadioButton Content="{x:Bind ViewModel.Localizer.Get('Settings_General_AutoStartup_AutoLaunch_SystemTray')}"
                                     IsChecked="{x:Bind ViewModel.IsAutoLaunchMinimizeToSystemTray, Mode=TwoWay}"
                                     Style="{StaticResource AutoLaunchRadioButtonStyle}" />
                        <RadioButton Content="{x:Bind ViewModel.Localizer.Get('Settings_General_AutoStartup_AutoLaunch_Taskbar')}"
                                     IsChecked="{x:Bind ViewModel.IsAutoLaunchMinimizeToTaskbar, Mode=TwoWay}"
                                     Style="{StaticResource AutoLaunchRadioButtonStyle}" />
                    </StackPanel>
                </toolkit:SettingsExpander.Items>
            </toolkit:SettingsExpander>

            <toolkit:SettingsExpander Description="{x:Bind ViewModel.Localizer.Get('Settings_General_AutoStartup_AutoConnect_Description')}"
                                      Header="{x:Bind ViewModel.Localizer.Get('Settings_General_AutoStartup_AutoConnect')}"
                                      IsExpanded="{x:Bind ViewModel.IsAutoConnectEnabled}"
                                      IsTabStop="False">
                <ToggleSwitch IsOn="{x:Bind ViewModel.IsAutoConnectEnabled, Mode=TwoWay}"
                              Style="{StaticResource ToggleSwitchStyle}" />
                <toolkit:SettingsExpander.Items>
                    <StackPanel Spacing="16">
                        <RadioButton Content="{x:Bind ViewModel.Localizer.Get('Settings_General_AutoStartup_AutoConnect_Latest')}"
                                     IsChecked="{x:Bind ViewModel.IsAutoConnectLatestConnection, Mode=TwoWay}"
                                     Style="{StaticResource AutoConnectRadioButtonStyle}" />
                        <RadioButton Content="{x:Bind ViewModel.Localizer.Get('Settings_General_AutoStartup_AutoConnect_Fastest')}"
                                     IsChecked="{x:Bind ViewModel.IsAutoConnectFastestConnection, Mode=TwoWay}"
                                     Style="{StaticResource AutoConnectRadioButtonStyle}" />
                    </StackPanel>
                </toolkit:SettingsExpander.Items>
            </toolkit:SettingsExpander>
        </StackPanel>
    </custom:SettingsPageContentControl>
</Page>