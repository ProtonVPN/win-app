<Page x:Class="ProtonVPN.Client.UI.Settings.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:labs="using:CommunityToolkit.Labs.WinUI"
      xmlns:controls="using:ProtonVPN.Client.Common.UI.Controls"
      mc:Ignorable="d">
    <Page.Resources>
        <Style x:Key="SettingsSectionHeaderTextBlockStyle" BasedOn="{StaticResource SubtitleTextBlockStyle}" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,24,0,16" />
        </Style>
    </Page.Resources>

    <controls:PageContentControl BackCommand="{x:Bind ViewModel.GoBackCommand}"
                                 IsCompact="{x:Bind ViewModel.IsNavigationPaneCollapsed, Mode=OneWay}"
                                 PageHeader="{x:Bind ViewModel.Title, Mode=OneWay}">

        <StackPanel x:Name="ContentArea">

            <TextBlock Margin="0,0,0,16"
                       Style="{ThemeResource SettingsSectionHeaderTextBlockStyle}"
                       Text="{x:Bind ViewModel.Localizer.Get('Settings_Features'), Mode=OneWay}" />

            <labs:SettingsCard Command="{x:Bind ViewModel.NavigateToCommand}"
                               CommandParameter="ProtonVPN.Client.UI.Settings.Pages.NetShieldViewModel"
                               Header="{x:Bind ViewModel.Localizer.Get('Settings_Features_NetShield'), Mode=OneWay}"
                               IsClickEnabled="True"
                               Style="{StaticResource DefaultSettingsCardStyle}">
                <labs:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xE705;" />
                </labs:SettingsCard.HeaderIcon>
            </labs:SettingsCard>

            <labs:SettingsCard Command="{x:Bind ViewModel.NavigateToCommand}"
                               CommandParameter="ProtonVPN.Client.UI.Settings.Pages.KillSwitchViewModel"
                               Header="{x:Bind ViewModel.Localizer.Get('Settings_Features_KillSwitch'), Mode=OneWay}"
                               IsClickEnabled="True"
                               Style="{StaticResource DefaultSettingsCardStyle}">
                <labs:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xEF1F;" />
                </labs:SettingsCard.HeaderIcon>
            </labs:SettingsCard>

            <labs:SettingsCard Command="{x:Bind ViewModel.NavigateToCommand}"
                               CommandParameter="ProtonVPN.Client.UI.Settings.Pages.PortForwardingViewModel"
                               Header="{x:Bind ViewModel.Localizer.Get('Settings_Features_PortForwarding'), Mode=OneWay}"
                               IsClickEnabled="True"
                               Style="{StaticResource DefaultSettingsCardStyle}">
                <labs:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xF591;" />
                </labs:SettingsCard.HeaderIcon>
            </labs:SettingsCard>

            <labs:SettingsCard Command="{x:Bind ViewModel.NavigateToCommand}"
                               CommandParameter="ProtonVPN.Client.UI.Settings.Pages.SplitTunnelingViewModel"
                               Header="{x:Bind ViewModel.Localizer.Get('Settings_Features_SplitTunneling'), Mode=OneWay}"
                               IsClickEnabled="True"
                               Style="{StaticResource DefaultSettingsCardStyle}">
                <labs:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xEDA3;" />
                </labs:SettingsCard.HeaderIcon>
            </labs:SettingsCard>

            <TextBlock Style="{ThemeResource SettingsSectionHeaderTextBlockStyle}"
                       Text="{x:Bind ViewModel.Localizer.Get('Settings_Connection'), Mode=OneWay}" />

            <labs:SettingsCard Command="{x:Bind ViewModel.NavigateToCommand}"
                               CommandParameter="ProtonVPN.Client.UI.Settings.Pages.ProtocolViewModel"
                               Header="{x:Bind ViewModel.Localizer.Get('Settings_Connection_Protocol'), Mode=OneWay}"
                               IsClickEnabled="True"
                               Style="{StaticResource DefaultSettingsCardStyle}">
                <labs:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xE8CE;" />
                </labs:SettingsCard.HeaderIcon>
                <TextBlock Foreground="{StaticResource TextWeakColorBrush}" Text="{x:Bind ViewModel.SelectedProtocol, Mode=OneWay}" />
            </labs:SettingsCard>
            <labs:SettingsCard Command="{x:Bind ViewModel.NavigateToCommand}"
                               CommandParameter="ProtonVPN.Client.UI.Settings.Pages.VpnAcceleratorViewModel"
                               Header="{x:Bind ViewModel.Localizer.Get('Settings_Connection_VpnAccelerator'), Mode=OneWay}"
                               IsClickEnabled="True"
                               Style="{StaticResource DefaultSettingsCardStyle}">
                <labs:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xE945;" />
                </labs:SettingsCard.HeaderIcon>
            </labs:SettingsCard>
            <labs:SettingsCard Command="{x:Bind ViewModel.NavigateToCommand}"
                               CommandParameter="ProtonVPN.Client.UI.Settings.Pages.AdvancedSettingsViewModel"
                               Header="{x:Bind ViewModel.Localizer.Get('Settings_Connection_AdvancedSettings'), Mode=OneWay}"
                               IsClickEnabled="True"
                               Style="{StaticResource DefaultSettingsCardStyle}">
                <labs:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xE713;" />
                </labs:SettingsCard.HeaderIcon>
            </labs:SettingsCard>

            <TextBlock Style="{ThemeResource SettingsSectionHeaderTextBlockStyle}"
                       Text="{x:Bind ViewModel.Localizer.Get('Settings_General'), Mode=OneWay}" />

            <labs:SettingsCard Command="{x:Bind ViewModel.NavigateToCommand}"
                               CommandParameter="ProtonVPN.Client.UI.Settings.Pages.AutoConnectViewModel"
                               Header="{x:Bind ViewModel.Localizer.Get('Settings_General_AutoStartup'), Mode=OneWay}"
                               IsClickEnabled="True"
                               Style="{StaticResource DefaultSettingsCardStyle}">
                <labs:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xE7E8;" />
                </labs:SettingsCard.HeaderIcon>
            </labs:SettingsCard>

            <labs:SettingsCard Header="{x:Bind ViewModel.Localizer.Get('Settings_General_Language'), Mode=OneWay}"
                               Style="{StaticResource DefaultSettingsCardStyle}">
                <labs:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xF2B7;" />
                </labs:SettingsCard.HeaderIcon>
                <ComboBox x:Name="cbLanguage"
                          ItemsSource="{x:Bind ViewModel.Languages}"
                          SelectedItem="{x:Bind ViewModel.SelectedLanguage, Mode=TwoWay}" />
            </labs:SettingsCard>

            <labs:SettingsCard Header="{x:Bind ViewModel.Localizer.Get('Settings_General_Theme'), Mode=OneWay}"
                               Style="{StaticResource DefaultSettingsCardStyle}">
                <labs:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xE793;" />
                </labs:SettingsCard.HeaderIcon>
                <ComboBox x:Name="themeMode"
                          DisplayMemberPath="Theme"
                          ItemsSource="{x:Bind ViewModel.Themes}"
                          SelectedItem="{x:Bind ViewModel.SelectedTheme, Mode=TwoWay}" />
            </labs:SettingsCard>

            <TextBlock Style="{ThemeResource SettingsSectionHeaderTextBlockStyle}"
                       Text="{x:Bind ViewModel.Localizer.Get('Settings_Improve'), Mode=OneWay}" />

            <labs:SettingsCard Command="{x:Bind ViewModel.NavigateToCommand}"
                               CommandParameter="ProtonVPN.Client.UI.Settings.Pages.CensorshipViewModel"
                               Header="{x:Bind ViewModel.Localizer.Get('Settings_Improve_Censorship'), Mode=OneWay}"
                               IsClickEnabled="True"
                               Style="{StaticResource DefaultSettingsCardStyle}">
                <labs:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xE716;" />
                </labs:SettingsCard.HeaderIcon>
            </labs:SettingsCard>

            <Button Style="{StaticResource SecondaryButtonStyle}"
                    Margin="0,16,0,0"
                    Content="{x:Bind ViewModel.Localizer.Get('Settings_RestoreDefault'), Mode=OneWay}"
                    Command="{x:Bind ViewModel.RestoreDefaultSettingsCommand}" />

            <StackPanel Margin="0,16,0,0">
                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Foreground="{StaticResource TextWeakColorBrush}">
                    <Run Text="{x:Bind ViewModel.Localizer.Get('Settings_AppVersion'), Mode=OneWay}" /><Run Text=":" />
                    <Run Text="{x:Bind ViewModel.ClientVersionDescription, Mode=OneWay}" />
                    <Hyperlink>
                        <Run Text="{x:Bind ViewModel.Localizer.Get('Settings_About'), Mode=OneWay}" />
                    </Hyperlink>
                </TextBlock>
                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Foreground="{StaticResource TextWeakColorBrush}">
                    <Run Text="{x:Bind ViewModel.Localizer.Get('Settings_OperatingSystemVersion'), Mode=OneWay}" /><Run Text=":" />
                    <Run Text="{x:Bind ViewModel.OperatingSystemVersionDescription, Mode=OneWay}" />
                </TextBlock>
            </StackPanel>

        </StackPanel>
    </controls:PageContentControl>
</Page>