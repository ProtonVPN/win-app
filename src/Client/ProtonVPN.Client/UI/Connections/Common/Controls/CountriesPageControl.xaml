<UserControl x:Class="ProtonVPN.Client.UI.Connections.Common.Controls.CountriesPageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:ProtonVPN.Client.UI.Connections.Common.Controls"
             xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pathicons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">

    <custom:PageContentControl x:Name="PageContentHost"
                               BackCommand="{x:Bind ViewModel.GoBackCommand, Mode=OneTime}"
                               IsBackButtonVisible="{x:Bind ViewModel.IsBackEnabled}"
                               IsCompact="{x:Bind ViewModel.IsNavigationPaneCollapsed}"
                               Style="{StaticResource MainPageContentControlStyle}">

        <custom:PageContentControl.PageHeader>

            <StackPanel Spacing="16">

                <custom:PageHeaderContentControl Content="{x:Bind ViewModel.Description}"
                                                 Header="{x:Bind ViewModel.Title}"
                                                 IllustrationSource="{x:Bind ViewModel.IllustrationSource, Mode=OneTime}" />

                <AutoSuggestBox x:Name="SearchQueryBox"
                                FontSize="{StaticResource BodyFontSize}"
                                FontWeight="{StaticResource BodyFontWeight}"
                                PlaceholderText="{x:Bind ViewModel.Localizer.Get('Countries_SearchPlaceholder')}"
                                Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                TextChanged="OnSearchQueryChanged">
                    <AutoSuggestBox.QueryIcon>
                        <pathicons:Magnifier Foreground="{ThemeResource TextWeakColorBrush}"
                                             Size="Pixels16" />
                    </AutoSuggestBox.QueryIcon>
                </AutoSuggestBox>

            </StackPanel>

        </custom:PageContentControl.PageHeader>

        <Grid>

            <controls:LocationItemsControl ItemsSource="{x:Bind ViewModel.LocationGroupsCvs.View, Mode=OneTime}" />

            <StackPanel Margin="0,12"
                        Orientation="Vertical"
                        Spacing="4"
                        Visibility="{x:Bind ViewModel.HasItems, Converter={StaticResource NotBooleanToVisibilityConverter}}">
                <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}"
                           Text="{x:Bind ViewModel.Localizer.Get('Countries_NoSearchResults')}" />
                <TextBlock Foreground="{ThemeResource TextWeakColorBrush}"
                           Style="{StaticResource CaptionTextBlockStyle}"
                           Text="{x:Bind ViewModel.Localizer.Get('Countries_TryDifferentKeyword')}" />
            </StackPanel>

        </Grid>

    </custom:PageContentControl>

</UserControl>