<bases:InfoFlyoutUserControl x:Class="ProtonVPN.Client.UI.Main.Home.Details.Flyouts.CountryFlyoutView"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:bases="using:ProtonVPN.Client.UI.Main.Home.Details.Flyouts.Bases"
                             xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
                             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                             xmlns:pathIcons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
                             x:DefaultBindMode="OneWay"
                             mc:Ignorable="d">

    <StackPanel Spacing="{StaticResource InfoFlyoutContentSpacing}">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{ThemeResource BodyStrongTextBlockStyle}"
                       Text="{x:Bind ViewModel.Localizer.Get('Flyouts_Country_Title')}" />

            <custom:GhostButton Grid.Column="1"
                                HorizontalAlignment="Right"
                                Click="OnCloseButtonClicked">
                <custom:GhostButton.LeftIcon>
                    <pathIcons:CrossCircleFilled />
                </custom:GhostButton.LeftIcon>
            </custom:GhostButton>
        </Grid>

        <Grid ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <custom:SimpleCountryFlag Grid.Column="0"
                                      Width="54"
                                      CountryCode="{x:Bind ViewModel.CountryCode}"
                                      FlagType="Country" />

            <TextBlock Grid.Column="1"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{ThemeResource TitleTextBlockStyle}"
                       Text="{x:Bind ViewModel.CountryName}" />
        </Grid>

        <StackPanel Orientation="Horizontal"
                    Spacing="4">
            <pathIcons:Eye Margin="0,1,0,-1"
                           Foreground="{ThemeResource SignalDangerColor}"
                           Size="Pixels16" />

            <TextBlock Foreground="{ThemeResource SignalDangerColor}"
                       Style="{ThemeResource CaptionTextBlockStyle}"
                       Text="{x:Bind ViewModel.Localizer.Get('Flyouts_Country_Warning')}" />
        </StackPanel>

        <TextBlock Style="{ThemeResource BodyTextBlockStyle}"
                   Text="{x:Bind ViewModel.Localizer.Get('Flyouts_Country_Description')}" />

    </StackPanel>
</bases:InfoFlyoutUserControl>