<UserControl x:Class="ProtonVPN.Client.UI.Main.Home.Details.Flyouts.IspFlyoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pathIcons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">

    <StackPanel Spacing="{StaticResource InfoFlyoutContentSpacing}">

        <TextBlock Grid.Column="0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Style="{ThemeResource BodyStrongTextBlockStyle}"
                   Text="{x:Bind ViewModel.Localizer.Get('Flyouts_Isp_Title')}" />

        <TextBlock Style="{ThemeResource TitleTextBlockStyle}"
                   Text="{x:Bind ViewModel.Isp}"
                   Visibility="{x:Bind ViewModel.IsDeviceExposed, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <StackPanel Orientation="Horizontal"
                    Spacing="4"
                    Visibility="{x:Bind ViewModel.IsDeviceExposed, Converter={StaticResource BooleanToVisibilityConverter}}">
            <pathIcons:Eye Foreground="{ThemeResource SignalDangerColor}"
                           Size="Pixels16" />

            <TextBlock Foreground="{ThemeResource SignalDangerColor}"
                       Style="{ThemeResource CaptionTextBlockStyle}"
                       Text="{x:Bind ViewModel.Localizer.Get('Flyouts_Isp_Warning')}" />
        </StackPanel>

        <TextBlock Style="{ThemeResource BodyTextBlockStyle}"
                   Text="{x:Bind ViewModel.Localizer.Get('Flyouts_Isp_Description')}" />

        <custom:IllustratedHyperlinkButton AutomationProperties.AutomationId="LearnMoreHyperlinkButton"
                                           Content="{x:Bind ViewModel.Localizer.Get('Flyouts_Isp_KnowledgeBaseLinkTitle')}"
                                           IllustrationSource="{StaticResource IspThumbnailIllustrationSource}"
                                           NavigateUri="{x:Bind ViewModel.IspLearnMoreUri}" />

    </StackPanel>

</UserControl>