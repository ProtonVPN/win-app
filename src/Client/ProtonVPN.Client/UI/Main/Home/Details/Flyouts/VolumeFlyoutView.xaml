<UserControl x:Class="ProtonVPN.Client.UI.Main.Home.Details.Flyouts.VolumeFlyoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:bases="using:ProtonVPN.Client.UI.Main.Home.Details.Flyouts.Bases"
             xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pathIcons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">

    <StackPanel Spacing="{StaticResource InfoFlyoutContentSpacing}">

        <TextBlock Grid.Column="0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Style="{ThemeResource BodyStrongTextBlockStyle}"
                   Text="{x:Bind ViewModel.Localizer.Get('Flyouts_Volume_Title')}" />

        <Grid ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                        Spacing="4">
                <TextBlock Foreground="{ThemeResource TextWeakColor}"
                           Style="{ThemeResource CaptionTextBlockStyle}"
                           Text="{x:Bind ViewModel.Localizer.Get('Flyouts_Volume_Download')}" />

                <TextBlock Style="{ThemeResource TitleTextBlockStyle}"
                           Text="{x:Bind ViewModel.FormattedDownloadVolume}" />
            </StackPanel>

            <StackPanel Grid.Column="1"
                        Spacing="4">
                <TextBlock Foreground="{ThemeResource TextWeakColor}"
                           Style="{ThemeResource CaptionTextBlockStyle}"
                           Text="{x:Bind ViewModel.Localizer.Get('Flyouts_Volume_Upload')}" />

                <TextBlock Style="{ThemeResource TitleTextBlockStyle}"
                           Text="{x:Bind ViewModel.FormattedUploadVolume}" />
            </StackPanel>
        </Grid>

        <TextBlock Style="{ThemeResource BodyTextBlockStyle}"
                   Text="{x:Bind ViewModel.Localizer.Get('Flyouts_Volume_Description')}" />

    </StackPanel>
</UserControl>