<Page x:Class="ProtonVPN.Client.UI.Main.Home.Details.Location.LocationDetailsPageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
      x:DefaultBindMode="OneWay"
      NavigationCacheMode="Required"
      mc:Ignorable="d">

    <custom:DeviceLocationControl Country="{x:Bind ViewModel.Country}"
                                  IpAddress="{x:Bind ViewModel.IpAddress}"
                                  Isp="{x:Bind ViewModel.Isp}"
                                  IpAddressLabel="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_YourIpAddress')}"
                                  CountryLabel="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_Country')}"
                                  IspLabel="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_Isp')}"
                                  ProtectionLabel="{x:Bind ViewModel.ProtectionLabel}"
                                  ProtectionSubLabel="{x:Bind ViewModel.ProtectionSubLabel}"
                                  IsConnected="{x:Bind ViewModel.IsConnected}"
                                  IsDisconnected="{x:Bind ViewModel.IsDisconnected}"
                                  IsConnecting="{x:Bind ViewModel.IsConnecting}" />

</Page>