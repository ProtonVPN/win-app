<Page x:Class="ProtonVPN.Client.UI.Main.Home.HomePageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:card="using:ProtonVPN.Client.UI.Main.Home.Card"
      xmlns:components="using:ProtonVPN.Client.UI.Main.Components"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:details="using:ProtonVPN.Client.UI.Main.Home.Details"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:update="using:ProtonVPN.Client.UI.Update"
      x:DefaultBindMode="OneWay"
      AutomationProperties.AutomationId="HomePage"
      AutomationProperties.Name="{x:Bind ViewModel.Localizer.Get('Automation_Properties_Home_Page')}"
      NavigationCacheMode="Required"
      mc:Ignorable="d">

    <Grid MaxWidth="{StaticResource MaximumHomePageContentWidth}">

        <card:ConnectionCardComponentView HorizontalAlignment="Center"
                                          VerticalAlignment="Top" />

        <components:ConnectionErrorComponent MaxWidth="{StaticResource MaximumPageContentWidth}"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Top" />

        <StackPanel HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    Spacing="8">

            <details:DetailsComponentView />

            <ContentControl HorizontalAlignment="Stretch"
                            Padding="0"
                            IsHitTestVisible="{x:Bind IsHitTestVisible}"
                            Style="{StaticResource PaneContentControlStyle}"
                            Visibility="{x:Bind ViewModel.IsUpdateAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">

                    <update:UpdateComponent HorizontalAlignment="Stretch"
                                            Margin="8"
                                            HorizontalContentAlignment="Stretch"
                                            Title="{x:Bind ViewModel.Localizer.Get('Components_Update_UpdateAvailable')}"
                                            Description="{x:Bind ViewModel.Localizer.Get('Components_Update_GetMostFromYourVpn')}"
                                            IsImageVisible="True" />
            </ContentControl>

        </StackPanel>

    </Grid>

</Page>