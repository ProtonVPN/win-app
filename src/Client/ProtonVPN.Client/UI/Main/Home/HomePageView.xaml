<Page x:Class="ProtonVPN.Client.UI.Main.Home.HomePageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:card="using:ProtonVPN.Client.UI.Main.Home.Card"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:details="using:ProtonVPN.Client.UI.Main.Home.Details"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:components="using:ProtonVPN.Client.UI.Main.Components"
      x:DefaultBindMode="OneWay"
      AutomationProperties.AutomationId="HomePage"
      AutomationProperties.Name="{x:Bind ViewModel.Localizer.Get('Automation_Properties_Home_Page')}"
      NavigationCacheMode="Required"
      mc:Ignorable="d">

    <Grid>

        <card:ConnectionCardComponentView HorizontalAlignment="Center"
                                          VerticalAlignment="Top" />

        <components:ConnectionErrorComponent VerticalAlignment="Top"
                                             MaxWidth="{StaticResource MaximumPageContentWidth}"
                                             HorizontalAlignment="Center" />

        <details:DetailsComponentView HorizontalAlignment="Stretch"
                                      VerticalAlignment="Bottom" />

    </Grid>

</Page>