<ContentDialog x:Class="ProtonVPN.Client.UI.Main.Sidebar.Connections.Profiles.Overlays.EditProfileOverlayView"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:controls="using:ProtonVPN.Client.UI.Main.Sidebar.Connections.Profiles.Controls"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               xmlns:pathIcons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
               x:DefaultBindMode="OneWay"
               AutomationProperties.AutomationId="ProfileOverlay"
               AutomationProperties.Name="{x:Bind ViewModel.Localizer.Get('Automation_Properties_Profile_Overlay')}"
               CloseButtonCommand="{x:Bind ViewModel.CloseOverlayCommand, Mode=OneTime}"
               Style="{StaticResource OverlayContentDialogStyle}"
               mc:Ignorable="d">

    <ContentDialog.Resources>
        <!--  NaN = Auto  -->
        <x:Double x:Key="ContentDialogWidth">NaN</x:Double>
        <x:Double x:Key="MaximumContentDialogWidth">600.0</x:Double>
        <Visibility x:Key="ContentDialogCloseOutsideAreaVisibility">Collapsed</Visibility>
    </ContentDialog.Resources>

    <ContentDialog.Title>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <controls:ProfileIconSelectorView Grid.Column="0"
                                              Margin="0,-2,0,0" />

            <TextBox Grid.Column="1"
                     MinWidth="250"
                     Margin="0,0,0,2"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center"
                     AutomationProperties.AutomationId="ProfileNameTextBox"
                     AutomationProperties.Name="{x:Bind ViewModel.Localizer.Get('Connections_Profiles_Name')}"
                     Background="{ThemeResource InteractionDefaultEmptyColorBrush}"
                     BorderThickness="0"
                     FontSize="{StaticResource SubtitleFontSize}"
                     IsSpellCheckEnabled="False"
                     MaxLength="{x:Bind ViewModel.MaximumProfileNameLength}"
                     PlaceholderText="{x:Bind ViewModel.Localizer.Get('Connections_Profiles_Name')}"
                     Text="{x:Bind ViewModel.ProfileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>

    </ContentDialog.Title>

    <StackPanel Spacing="24">

        <controls:ConnectionIntentSelectorView />

        <controls:ProfileSettingsSelectorView />

        <Button HorizontalAlignment="Stretch"
                AutomationProperties.AutomationId="SaveProfileButton"
                AutomationProperties.Name="{x:Bind ViewModel.Localizer.Get('Connections_Profiles_Save')}"
                Command="{x:Bind ViewModel.SaveProfileCommand, Mode=OneTime}"
                Content="{x:Bind ViewModel.Localizer.Get('Connections_Profiles_Save')}"
                Style="{StaticResource PrimaryButtonStyle}" />

    </StackPanel>

</ContentDialog>