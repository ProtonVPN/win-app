<UserControl x:Class="ProtonVPN.Client.UI.Dialogs.ReportIssue.ReportIssueComponentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:ProtonVPN.Client.UI.Dialogs.ReportIssue"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pathicons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">

    <custom:GhostButton ToolTipService.ToolTip="{x:Bind ViewModel.Localizer.Get('Dialogs_ReportIssue_Title')}"
                        Command="{x:Bind ViewModel.ReportIssueCommand, Mode=OneTime}">
        <custom:GhostButton.LeftIcon>
            <pathicons:QuestionCircle Size="Pixels16" />
        </custom:GhostButton.LeftIcon>
    </custom:GhostButton>
</UserControl>