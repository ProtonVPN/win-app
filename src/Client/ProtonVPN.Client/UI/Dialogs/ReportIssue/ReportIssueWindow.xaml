<wex:WindowEx x:Class="ProtonVPN.Client.UI.Dialogs.ReportIssue.ReportIssueWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:local="using:ProtonVPN.Client.UI.Dialogs.ReportIssue"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:wex="using:WinUIEx"
              IsResizable="False"
              IsMaximizable="False"
              IsMinimizable="False"
              Width="456"
              Height="700"
              x:DefaultBindMode="OneWay"
              mc:Ignorable="d">

    <custom:WindowContentControl x:Name="WindowContainer"
                                 TitleBarButtonsLength="46"
                                 IconSource="{StaticResource ProtonVpnOnApplicationIconSource}"
                                 Title="{x:Bind Shell.ViewModel.Title}">

        <custom:WindowContentControl.Resources>
            <Style TargetType="ScrollViewer" BasedOn="{StaticResource OffsetScrollViewer}" />
        </custom:WindowContentControl.Resources>
        
        <local:ReportIssueShellView x:Name="Shell" />

    </custom:WindowContentControl>
</wex:WindowEx>