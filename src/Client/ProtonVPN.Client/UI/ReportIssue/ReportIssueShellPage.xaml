<Page x:Class="ProtonVPN.Client.UI.ReportIssue.ReportIssueShellPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      mc:Ignorable="d">

    <Grid>
        <Grid x:Name="WindowTitleBar"
              Height="{StaticResource CompactTitleBarHeight}"
              Margin="{StaticResource CompactTitleBarMargin}"
              VerticalAlignment="Top"
              Canvas.ZIndex="1"
              IsHitTestVisible="True">
            <TextBlock x:Name="WindowTitleBarText"
                       VerticalAlignment="Center"
                       AutomationProperties.AutomationId="WindowTitleLabel"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Text="{x:Bind ViewModel.Title, Mode=OneWay}"
                       TextWrapping="NoWrap" />
        </Grid>

        <Frame x:Name="NavigationFrame"
               Width="328"
               Margin="0,64"
               HorizontalAlignment="Center"
               VerticalAlignment="Stretch"/>
    </Grid>
</Page>