<UserControl x:Class="ProtonVPN.Client.UI.Home.ConnectionCard.ConnectionCardComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:ProtonVPN.Client.Common.UI.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:help="using:ProtonVPN.Client.UI.Home.Help"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pathicons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
             xmlns:toolkit="using:CommunityToolkit.WinUI.UI.Controls"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="ConnectionDetailsButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{ThemeResource TextNormColorBrush}" />
            <Setter Property="Background" Value="{StaticResource InteractionDefaultColorBrush}" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ContentContainer"
                                Padding="{TemplateBinding Padding}"
                                AutomationProperties.AccessibilityView="Raw"
                                Background="{TemplateBinding Background}"
                                BackgroundSizing="{TemplateBinding BackgroundSizing}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}">
                            <Border.BackgroundTransition>
                                <BrushTransition Duration="0:0:0.083" />
                            </Border.BackgroundTransition>

                            <Grid ColumnSpacing="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="16" />
                                </Grid.ColumnDefinitions>

                                <ContentPresenter x:Name="ContentPresenter"
                                                  Grid.Column="0"
                                                  HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  Content="{TemplateBinding Content}"
                                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                                  ContentTransitions="{TemplateBinding ContentTransitions}"
                                                  Foreground="{TemplateBinding Foreground}" />

                                <pathicons:ChevronRight x:Name="ChevronRight"
                                                        Grid.Column="1"
                                                        VerticalAlignment="Center"
                                                        Foreground="{StaticResource TextWeakColorBrush}"
                                                        Opacity="1" />
                            </Grid>

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Target="ContentContainer.Background" Value="{StaticResource InteractionDefaultHoverColorBrush}" />
                                            <Setter Target="ChevronRight.Foreground" Value="{StaticResource TextNormColorBrush}" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Target="ContentContainer.Background" Value="{StaticResource InteractionDefaultActiveColorBrush}" />
                                            <Setter Target="ChevronRight.Foreground" Value="{StaticResource TextNormColorBrush}" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <VisualState.Setters>
                                            <Setter Target="ChevronRight.Opacity" Value="0" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <StackPanel Padding="16,16,16,0"
                Background="{StaticResource BackgroundNormColorBrush}"
                Orientation="Vertical"
                Spacing="12">

        <Grid ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Foreground="{StaticResource TextWeakColorBrush}"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Text="{x:Bind ViewModel.Header}" />

            <help:HelpComponent Grid.Column="1" />
        </Grid>

        <Grid MinHeight="72"
              Padding="8,8,16,8"
              Background="{StaticResource BackgroundWeakColorBrush}"
              BorderBrush="{StaticResource BorderNormColorBrush}"
              BorderThickness="1"
              ColumnSpacing="8"
              CornerRadius="8">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Command="{x:Bind ViewModel.ShowConnectionDetailsCommand}"
                    Style="{StaticResource ConnectionDetailsButtonStyle}">
                <toolkit:DockPanel>
                    <controls:CountryFlagControl Width="30"
                                                 Margin="4,0,0,0"
                                                 VerticalAlignment="Top"
                                                 toolkit:DockPanel.Dock="Left"
                                                 EntryCountryCode="{x:Bind ViewModel.EntryCountry}"
                                                 ExitCountryCode="{x:Bind ViewModel.ExitCountry}"
                                                 IsSecureCore="{x:Bind ViewModel.IsSecureCore}" />
                    <StackPanel Margin="12,0,0,0"
                                Orientation="Vertical"
                                Spacing="4">

                        <toolkit:DockPanel LastChildFill="False">
                            <pathicons:Wrench Grid.Column="4"
                                              Margin="8,4,0,0"
                                              VerticalAlignment="top"
                                              toolkit:DockPanel.Dock="Right"
                                              Foreground="{StaticResource TextWeakColorBrush}"
                                              ToolTipService.ToolTip="{x:Bind ViewModel.Localizer.Get('Home_Recents_ServerUnderMaintenance'), Mode=OneWay}"
                                              Visibility="{x:Bind ViewModel.IsServerUnderMaintenance, Mode=OneWay}" />
                            <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}"
                                       Text="{x:Bind ViewModel.Title}"
                                       TextTrimming="CharacterEllipsis"
                                       TextWrapping="WrapWholeWords" />
                        </toolkit:DockPanel>

                        <toolkit:WrapPanel Orientation="Horizontal">
                            <TextBlock Foreground="{StaticResource TextWeakColorBrush}"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Text="{x:Bind ViewModel.Subtitle}"
                                       TextTrimming="CharacterEllipsis"
                                       TextWrapping="WrapWholeWords"
                                       Visibility="{x:Bind ViewModel.HasSubtitle}" />

                            <TextBlock Margin="6,0"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource TextWeakColorBrush}"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Text="•"
                                       Visibility="{x:Bind ViewModel.HasSubtitleAndFeature}" />

                            <StackPanel Orientation="Horizontal"
                                        Visibility="{x:Bind ViewModel.IsTor}">
                                <pathicons:BrandTor Foreground="{StaticResource TextWeakColorBrush}" />
                                <TextBlock Margin="4,0,0,0"
                                           Foreground="{StaticResource TextWeakColorBrush}"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Text="{x:Bind ViewModel.Localizer.Get('Server_Feature_Tor')}"
                                           TextTrimming="CharacterEllipsis"
                                           TextWrapping="WrapWholeWords" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"
                                        Visibility="{x:Bind ViewModel.IsP2P}">
                                <pathicons:ArrowRightArrowLeft Foreground="{StaticResource TextWeakColorBrush}" />
                                <TextBlock Margin="4,0,0,0"
                                           Foreground="{StaticResource TextWeakColorBrush}"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Text="{x:Bind ViewModel.Localizer.Get('Server_Feature_P2P')}"
                                           TextTrimming="CharacterEllipsis"
                                           TextWrapping="WrapWholeWords" />
                            </StackPanel>
                        </toolkit:WrapPanel>
                    </StackPanel>
                </toolkit:DockPanel>
            </Button>

            <Grid Grid.Column="1">
                <Button Command="{x:Bind ViewModel.ConnectCommand}"
                        Content="{x:Bind ViewModel.Localizer.Get('Common_Actions_Connect')}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Mode=Self}}" />
                <Button Command="{x:Bind ViewModel.CancelConnectionCommand}"
                        Content="{x:Bind ViewModel.Localizer.Get('Common_Actions_Cancel')}"
                        Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Mode=Self}}" />
                <Button Command="{x:Bind ViewModel.DisconnectCommand}"
                        Content="{x:Bind ViewModel.Localizer.Get('Common_Actions_Disconnect')}"
                        Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Mode=Self}}" />
            </Grid>
        </Grid>
    </StackPanel>
</UserControl>