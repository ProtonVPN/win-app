<ContentDialog x:Class="ProtonVPN.Client.UI.Home.ConnectionCard.Overlays.FreeConnectionsOverlayDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:controls="using:ProtonVPN.Client.Common.UI.Controls"
               xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               xmlns:models="using:ProtonVPN.Client.Models"
               xmlns:overlays="using:ProtonVPN.Client.UI.Dialogs.Overlays"
               xmlns:pathicons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
               xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
               Title="{x:Bind ViewModel.Localizer.Get('Dialogs_FreeConnections_Title')}"
               x:DefaultBindMode="OneWay"
               CloseButtonCommand="{x:Bind ViewModel.CloseOverlayCommand}"
               Style="{StaticResource OverlayContentDialogStyle}"
               mc:Ignorable="d">

    <StackPanel Orientation="Vertical"
                Spacing="16">

        <TextBlock Style="{StaticResource BodyTextBlockStyle}"
                   Text="{x:Bind ViewModel.Localizer.GetPluralFormat('Dialogs_FreeConnections_Description', ViewModel.FreeCountriesCount)}"
                   TextWrapping="Wrap" />

        <TextBlock Foreground="{ThemeResource TextWeakColorBrush}"
                   Style="{StaticResource CaptionTextBlockStyle}"
                   Text="{x:Bind ViewModel.Localizer.GetPluralFormat('Dialogs_FreeConnections_Header', ViewModel.FreeCountriesCount)}"
                   TextWrapping="Wrap" />

        <ItemsControl ItemsSource="{x:Bind ViewModel.FreeCountries}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <toolkit:WrapPanel HorizontalSpacing="16"
                                       Orientation="Horizontal"
                                       VerticalSpacing="16" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="models:Country">
                    <StackPanel Orientation="Horizontal"
                                Spacing="8">
                        <controls:CountryFlagControl Width="30"
                                                     VerticalAlignment="Top"
                                                     ExitCountryCode="{x:Bind Code, Mode=OneTime}" />
                        <TextBlock Foreground="{ThemeResource TextNormColorBrush}"
                                   Style="{StaticResource BodyTextBlockStyle}"
                                   Text="{x:Bind Name, Mode=OneTime}"
                                   TextTrimming="CharacterEllipsis" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <custom:GhostButton Margin="0,12,0,0"
                            Padding="12"
                            Command="{x:Bind ViewModel.UpgradePlanCommand, Mode=OneTime}"
                            CornerRadius="8">

            <custom:GhostButton.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.ThemeDictionaries>
                        <ResourceDictionary x:Key="Light">
                            <StaticResource x:Key="SecondaryGhostButtonBackground" ResourceKey="BackgroundWeakColorBrush" />
                            <StaticResource x:Key="SecondaryGhostButtonBackgroundPointerOver" ResourceKey="BackgroundWeakHoverColorBrush" />
                            <StaticResource x:Key="SecondaryGhostButtonBackgroundPressed" ResourceKey="BackgroundWeakActiveColorBrush" />
                            <StaticResource x:Key="SecondaryGhostButtonBackgroundDisabled" ResourceKey="BackgroundWeakColorBrush" />
                        </ResourceDictionary>
                        <ResourceDictionary x:Key="Dark">
                            <StaticResource x:Key="SecondaryGhostButtonBackground" ResourceKey="BackgroundWeakColorBrush" />
                            <StaticResource x:Key="SecondaryGhostButtonBackgroundPointerOver" ResourceKey="BackgroundWeakHoverColorBrush" />
                            <StaticResource x:Key="SecondaryGhostButtonBackgroundPressed" ResourceKey="BackgroundWeakActiveColorBrush" />
                            <StaticResource x:Key="SecondaryGhostButtonBackgroundDisabled" ResourceKey="BackgroundWeakColorBrush" />
                        </ResourceDictionary>
                    </ResourceDictionary.ThemeDictionaries>
                </ResourceDictionary>
            </custom:GhostButton.Resources>

            <custom:GhostButton.RightIcon>
                <pathicons:ChevronRight />
            </custom:GhostButton.RightIcon>

            <Grid ColumnDefinitions="Auto,*"
                  ColumnSpacing="16">
                <Image Grid.Column="0"
                       Width="40"
                       Height="40"
                       VerticalAlignment="Center"
                       Source="{StaticResource WorldwideCoverageIllustrationSource}" />
                <TextBlock Grid.Column="1"
                           VerticalAlignment="Center"
                           Foreground="{ThemeResource TextNormColorBrush}"
                           Text="{x:Bind ViewModel.Localizer.Get('Dialogs_FreeConnections_WorlwideCoverageUpsell')}"
                           TextWrapping="Wrap" />
            </Grid>
        </custom:GhostButton>
    </StackPanel>
</ContentDialog>