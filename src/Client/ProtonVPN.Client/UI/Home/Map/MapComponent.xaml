<UserControl x:Class="ProtonVPN.Client.UI.Home.Map.MapComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <x:Double x:Key="WorldMapOpacity">0.15</x:Double>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <x:Double x:Key="WorldMapOpacity">0.40</x:Double>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Image Margin="0,0,0,-160"
           HorizontalAlignment="Center"
           VerticalAlignment="Stretch"
           Opacity="{ThemeResource WorldMapOpacity}"
           Source="{StaticResource WorldMapIllustrationSource}"
           Stretch="UniformToFill" />

</UserControl>