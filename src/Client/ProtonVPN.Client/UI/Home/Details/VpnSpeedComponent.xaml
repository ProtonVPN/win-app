<UserControl x:Class="ProtonVPN.Client.UI.Home.Details.VpnSpeedComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pathicons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
             xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">

    <UserControl.Resources>

        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Styles/ConnectionDetailsStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>

    </UserControl.Resources>

    <StackPanel Orientation="Vertical"
                Spacing="8">

        <Grid Padding="8"
              HorizontalAlignment="Stretch"
              ColumnSpacing="8"
              RowSpacing="4">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="6">
                <TextBlock Foreground="{ThemeResource SignalSuccessColorBrush}"
                           Style="{StaticResource BodyTextBlockStyle}"
                           Text="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_Download')}" />
                <pathicons:ArrowDownLine Foreground="{ThemeResource SignalSuccessColorBrush}" />
            </StackPanel>

            <TextBlock Grid.Row="1"
                       Grid.Column="0"
                       HorizontalAlignment="Center"
                       Style="{StaticResource BodyLargeStrongTextBlockStyle}"
                       Text="{x:Bind ViewModel.FormattedDownloadSpeed}" />

            <StackPanel Grid.Row="0"
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="6">
                <TextBlock Foreground="{ThemeResource SignalDangerColorBrush}"
                           Style="{StaticResource BodyTextBlockStyle}"
                           Text="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_Upload')}" />
                <pathicons:ArrowUpLine Foreground="{ThemeResource SignalDangerColorBrush}" />
            </StackPanel>

            <TextBlock Grid.Row="1"
                       Grid.Column="1"
                       HorizontalAlignment="Center"
                       Style="{StaticResource BodyLargeStrongTextBlockStyle}"
                       Text="{x:Bind ViewModel.FormattedUploadSpeed}" />

        </Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       HorizontalAlignment="Right"
                       Padding="0,0,12,0"
                       Foreground="{ThemeResource TextWeakColor}"
                       Style="{ThemeResource CaptionStrongTextBlockStyle}"
                       Text="{x:Bind ViewModel.SpeedUnit}" />

            <lvc:CartesianChart Grid.Row="1"
                                Height="152"
                                EasingFunction="{x:Null}"
                                Series="{x:Bind ViewModel.Series}"
                                XAxes="{x:Bind ViewModel.XAxes}"
                                YAxes="{x:Bind ViewModel.YAxes}"
                                DrawMargin="{x:Bind ViewModel.DrawMargin}" />
        </Grid>

        <Grid Padding="8,4"
              HorizontalAlignment="Center"
              BorderBrush="{ThemeResource BorderWeakColorBrush}"
              BorderThickness="1"
              ColumnSpacing="6"
              CornerRadius="8"
              ToolTipService.ToolTip="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_VpnAccelerator_ToolTip')}"
              Visibility="{x:Bind ViewModel.IsVpnAcceleratorTaglineVisible, Converter={StaticResource BooleanToVisibilityConverter}}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <pathicons:Bolt Grid.Column="0"
                            Foreground="{ThemeResource VpnGreenColorBrush}"
                            Size="Pixels16" />
            <TextBlock Grid.Column="1"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       Text="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_VpnAccelerator')}"
                       TextTrimming="CharacterEllipsis" />
        </Grid>

        <StackPanel Orientation="Vertical">

            <toolkit:HeaderedContentControl Header="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_Volume_Download')}"
                                            Style="{StaticResource ConnectionDetailsHeaderedContentControlStyle}">
                <TextBlock Style="{StaticResource ConnectionDetailsTextBlockStyle}"
                           Text="{x:Bind ViewModel.FormattedDownloadVolume}" />
            </toolkit:HeaderedContentControl>

            <toolkit:HeaderedContentControl Header="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_Volume_Upload')}"
                                            Style="{StaticResource ConnectionDetailsHeaderedContentControlStyle}">
                <TextBlock Style="{StaticResource ConnectionDetailsTextBlockStyle}"
                           Text="{x:Bind ViewModel.FormattedUploadVolume}" />
            </toolkit:HeaderedContentControl>

            <toolkit:HeaderedContentControl Header="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_Volume_Total')}"
                                            Style="{StaticResource ConnectionDetailsHeaderedContentControlStyle}">
                <TextBlock Style="{StaticResource ConnectionDetailsTextBlockStyle}"
                           Text="{x:Bind ViewModel.FormattedTotalVolume}" />
            </toolkit:HeaderedContentControl>

        </StackPanel>

    </StackPanel>

</UserControl>