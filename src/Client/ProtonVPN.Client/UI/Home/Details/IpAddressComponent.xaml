<UserControl x:Class="ProtonVPN.Client.UI.Home.Details.IpAddressComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pathicons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">

    <Grid Padding="4,8"
          BorderBrush="{StaticResource BorderWeakColorBrush}"
          BorderThickness="1"
          ColumnSpacing="8"
          CornerRadius="8"
          RowSpacing="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="6">
            <TextBlock Foreground="{StaticResource TextWeakColorBrush}"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Text="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_MyIp')}" />
            <Grid Margin="-4">
                <Button Command="{x:Bind ViewModel.ShowUserIPAddressCommand, Mode=OneTime}"
                        Style="{StaticResource TertiaryButtonStyle}"
                        ToolTipService.ToolTip="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_ShowIP')}"
                        Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Mode=Self}}">
                    <pathicons:Eye />
                </Button>
                <Button Command="{x:Bind ViewModel.HideUserIPAddressCommand, Mode=OneTime}"
                        Style="{StaticResource TertiaryButtonStyle}"
                        ToolTipService.ToolTip="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_HideIP')}"
                        Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Mode=Self}}">
                    <pathicons:EyeSlash />
                </Button>
            </Grid>
        </StackPanel>

        <TextBlock Grid.Row="0"
                   Grid.Column="2"
                   HorizontalAlignment="Center"
                   Foreground="{StaticResource TextWeakColorBrush}"
                   Style="{StaticResource CaptionTextBlockStyle}"
                   Text="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_VpnIp')}" />

        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   HorizontalAlignment="Center"
                   Style="{StaticResource CaptionStrongTextBlockStyle}"
                   Text="{x:Bind ViewModel.UserIpAddress}" />

        <TextBlock Grid.Row="1"
                   Grid.Column="2"
                   HorizontalAlignment="Center"
                   Style="{StaticResource CaptionStrongTextBlockStyle}"
                   Text="{x:Bind ViewModel.VpnIpAddress}" />

        <pathicons:ArrowRight Grid.Row="0"
                              Grid.RowSpan="2"
                              Grid.Column="1"
                              VerticalAlignment="Center"
                              Foreground="{StaticResource TextWeakColorBrush}" />
    </Grid>
</UserControl>