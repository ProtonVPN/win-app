<UserControl x:Class="ProtonVPN.Client.UI.Home.Details.IpAddressComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pathicons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
             xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">

    <Grid Padding="4,8"
          BorderBrush="{ThemeResource BorderWeakColorBrush}"
          BorderThickness="1"
          ColumnSpacing="8"
          CornerRadius="8"
          RowSpacing="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="6">
            <TextBlock Foreground="{ThemeResource TextWeakColorBrush}"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Text="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_MyIp')}" />
            <Grid Margin="-4">
                <custom:GhostButton AutomationProperties.AutomationId="ShowUserIpAddressButton"
                                    AutomationProperties.FullDescription="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_ShowIP_Description')}"
                                    Command="{x:Bind ViewModel.ShowUserIPAddressCommand, Mode=OneTime}"
                                    ToolTipService.ToolTip="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_ShowIP')}"
                                    Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Mode=Self}}">
                    <custom:GhostButton.LeftIcon>
                        <pathicons:Eye />
                    </custom:GhostButton.LeftIcon>
                </custom:GhostButton>
                <custom:GhostButton AutomationProperties.AutomationId="HideUserIpAddressButton"
                                    AutomationProperties.FullDescription="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_HideIP_Description')}"
                                    Command="{x:Bind ViewModel.HideUserIPAddressCommand, Mode=OneTime}"
                                    ToolTipService.ToolTip="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_HideIP')}"
                                    Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Mode=Self}}">
                    <custom:GhostButton.LeftIcon>
                        <pathicons:EyeSlash />
                    </custom:GhostButton.LeftIcon>
                </custom:GhostButton>
            </Grid>
        </StackPanel>

        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   HorizontalAlignment="Center"
                   Style="{StaticResource CaptionStrongTextBlockStyle}"
                   Text="{x:Bind ViewModel.UserIpAddress}" />

        <pathicons:ArrowRight Grid.Row="0"
                              Grid.RowSpan="2"
                              Grid.Column="1"
                              VerticalAlignment="Center"
                              Foreground="{ThemeResource TextWeakColorBrush}" />

        <TextBlock Grid.Row="0"
                   Grid.Column="2"
                   HorizontalAlignment="Center"
                   Foreground="{ThemeResource TextWeakColorBrush}"
                   Style="{StaticResource CaptionTextBlockStyle}"
                   Text="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_VpnIp')}" />

        <TextBlock Grid.Row="1"
                   Grid.Column="2"
                   HorizontalAlignment="Center"
                   Style="{StaticResource CaptionStrongTextBlockStyle}"
                   Text="{x:Bind ViewModel.VpnIpAddress}" />
    </Grid>
</UserControl>