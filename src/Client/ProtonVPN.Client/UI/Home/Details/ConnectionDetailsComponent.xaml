<UserControl x:Class="ProtonVPN.Client.UI.Home.Details.ConnectionDetailsComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:toolkit="using:CommunityToolkit.WinUI.UI.Controls"
             xmlns:pathicons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
             xmlns:controls="using:ProtonVPN.Client.Common.UI.Controls"
             xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
             xmlns:details="using:ProtonVPN.Client.UI.Home.Details"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="toolkit:HeaderedContentControl">
            <Setter Property="Padding" Value="0,8" />
            <Setter Property="Margin" Value="0,0,0,0" />
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderWeakColorBrush}" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="FontSize" Value="{StaticResource CaptionFontSize}" />
            <Setter Property="FontWeight" Value="{StaticResource CaptionFontWeight}" />
            <Setter Property="IsTabStop" Value="False" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="toolkit:HeaderedContentControl">

                        <Grid Padding="{TemplateBinding Padding}"
                              Background="{TemplateBinding Background}"
                              BorderBrush="{TemplateBinding BorderBrush}"
                              BorderThickness="{TemplateBinding BorderThickness}"
                              ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <ContentPresenter Grid.Column="0"
                                              Content="{TemplateBinding Header}"
                                              Foreground="{StaticResource TextWeakColorBrush}" />
                            <ContentPresenter Grid.Column="1"
                                              HorizontalAlignment="Right"
                                              Content="{TemplateBinding Content}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InfoGhostButtonStyle" BasedOn="{StaticResource DefaultGhostButtonStyle}" TargetType="custom:GhostButton">
            <Setter Property="Margin" Value="0,-54" />
            <Setter Property="ToolTipService.ToolTip" Value="{x:Bind ViewModel.Localizer.Get('Common_Links_LearnMore')}" />
            <Setter Property="AutomationProperties.FullDescription" Value="{x:Bind ViewModel.Localizer.Get('Common_Links_LearnMore')}" />
        </Style>
    </UserControl.Resources>

    <ScrollViewer Margin="0,0,-12,0"
                  Padding="0,0,12,0"
                  HorizontalScrollBarVisibility="Disabled"
                  VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical"
                    Spacing="20">

            <details:IpAddressComponent TabIndex="1" />

            <details:VpnSpeedComponent TabIndex="2" />

            <StackPanel Orientation="Vertical">

                <toolkit:HeaderedContentControl Content="{x:Bind ViewModel.FormattedSessionLength}"
                                                Header="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_ConnectedFor')}"
                                                Visibility="{x:Bind ViewModel.FormattedSessionLength, Converter={StaticResource NotNullToVisibilityConverter}}" />

                <toolkit:HeaderedContentControl Content="{x:Bind ViewModel.Country}"
                                                Header="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_Country')}"
                                                Visibility="{x:Bind ViewModel.Country, Converter={StaticResource NotNullToVisibilityConverter}}" />

                <toolkit:HeaderedContentControl Content="{x:Bind ViewModel.CurrentConnectionDetails.CityState}"
                                                Header="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_City')}"
                                                Visibility="{x:Bind ViewModel.CurrentConnectionDetails.CityState, Converter={StaticResource NotNullToVisibilityConverter}}" />

                <toolkit:HeaderedContentControl Content="{x:Bind ViewModel.CurrentConnectionDetails.ServerName}"
                                                Header="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_Server')}"
                                                Visibility="{x:Bind ViewModel.CurrentConnectionDetails.ServerName, Converter={StaticResource NotNullToVisibilityConverter}}" />

                <toolkit:HeaderedContentControl Visibility="{x:Bind ViewModel.ServerLoad, Converter={StaticResource NotNullToVisibilityConverter}}">
                    <toolkit:HeaderedContentControl.Header>
                        <StackPanel Orientation="Horizontal"
                                    Spacing="4">
                            <TextBlock Text="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_ServerLoad')}" />
                            <custom:GhostButton AutomationProperties.AutomationId="ShowServerLoadOverlayButton"
                                                Command="{x:Bind ViewModel.OpenOverlayCommand}"
                                                CommandParameter="ProtonVPN.Client.UI.Dialogs.Overlays.ServerLoadOverlayViewModel"
                                                Style="{StaticResource InfoGhostButtonStyle}">
                                <custom:GhostButton.LeftIcon>
                                    <pathicons:InfoCircle />
                                </custom:GhostButton.LeftIcon>
                            </custom:GhostButton>
                        </StackPanel>
                    </toolkit:HeaderedContentControl.Header>
                    <StackPanel Orientation="Horizontal"
                                Spacing="8">
                        <controls:ServerLoadControl Value="{x:Bind ViewModel.ServerLoad}" />
                        <TextBlock Text="{x:Bind ViewModel.FormattedServerLoad}" />
                    </StackPanel>
                </toolkit:HeaderedContentControl>

                <toolkit:HeaderedContentControl Content="{x:Bind ViewModel.ServerLatency}"
                                                Visibility="{x:Bind ViewModel.ServerLatency, Converter={StaticResource NotNullToVisibilityConverter}}">
                    <toolkit:HeaderedContentControl.Header>
                        <StackPanel Orientation="Horizontal"
                                    Spacing="4">
                            <TextBlock Text="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_Latency')}" />
                            <custom:GhostButton AutomationProperties.AutomationId="ShowLatencyOverlayButton"
                                                Command="{x:Bind ViewModel.OpenOverlayCommand}"
                                                CommandParameter="ProtonVPN.Client.UI.Dialogs.Overlays.LatencyOverlayViewModel"
                                                Style="{StaticResource InfoGhostButtonStyle}">
                                <custom:GhostButton.LeftIcon>
                                    <pathicons:InfoCircle />
                                </custom:GhostButton.LeftIcon>
                            </custom:GhostButton>
                        </StackPanel>
                    </toolkit:HeaderedContentControl.Header>
                </toolkit:HeaderedContentControl>

                <toolkit:HeaderedContentControl Content="{x:Bind ViewModel.CurrentConnectionDetails.Protocol}"
                                                Visibility="{x:Bind ViewModel.CurrentConnectionDetails.Protocol, Converter={StaticResource NotNullToVisibilityConverter}}">
                    <toolkit:HeaderedContentControl.Header>
                        <StackPanel Orientation="Horizontal"
                                    Spacing="4">
                            <TextBlock Text="{x:Bind ViewModel.Localizer.Get('Home_ConnectionDetails_Protocol')}" />
                            <custom:GhostButton AutomationProperties.AutomationId="ShowProtocolOverlayButton"
                                                Command="{x:Bind ViewModel.OpenOverlayCommand}"
                                                CommandParameter="ProtonVPN.Client.UI.Dialogs.Overlays.ProtocolOverlayViewModel"
                                                Style="{StaticResource InfoGhostButtonStyle}">
                                <custom:GhostButton.LeftIcon>
                                    <pathicons:InfoCircle />
                                </custom:GhostButton.LeftIcon>
                            </custom:GhostButton>
                        </StackPanel>
                    </toolkit:HeaderedContentControl.Header>
                </toolkit:HeaderedContentControl>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>