<UserControl x:Class="ProtonVPN.Client.UI.Gateways.Items.B2BServerItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:ProtonVPN.Client.Common.UI.Controls"
             xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:icons="using:ProtonVPN.Client.Common.UI.Assets.Icons"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pathIcons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">

    <custom:GhostButton Padding="8"
                        HorizontalAlignment="Stretch"
                        AutomationProperties.AutomationId="{x:Bind ViewModel.ConnectButtonAutomationId}"
                        AutomationProperties.Name="ServerConnectButton"
                        Command="{x:Bind ViewModel.ConnectCommand}"
                        CornerRadius="8"
                        Foreground="{ThemeResource TextNormColorBrush}"
                        IsEnabled="{x:Bind ViewModel.IsUnderMaintenance, Converter={StaticResource NotBooleanToBooleanConverter}}">
        
        <Grid ColumnDefinitions="*,76"
              ColumnSpacing="8">
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        Spacing="8">

                <controls:CountryFlagControl ExitCountryCode="{x:Bind ViewModel.ExitCountryCode}" />
                
                <TextBlock VerticalAlignment="Center"
                           FontSize="{ThemeResource BodyFontSize}"
                           FontWeight="{ThemeResource BodyFontWeight}"
                           Text="{x:Bind ViewModel.Name}" />
                
                <icons:ActiveDot Width="16"
                                 Height="16"
                                 AutomationProperties.AutomationId="{x:Bind ViewModel.ActiveConnectionAutomationId}"
                                 Visibility="{x:Bind ViewModel.IsActiveConnection, Converter={StaticResource BooleanToVisibilityConverter}}" />
                
                <pathIcons:Wrench Visibility="{x:Bind ViewModel.IsUnderMaintenance, Converter={StaticResource BooleanToVisibilityConverter}}" />
                
            </StackPanel>

            <StackPanel Grid.Column="1"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        Spacing="8"
                        Visibility="{x:Bind ViewModel.IsUnderMaintenance, Converter={StaticResource NotBooleanToVisibilityConverter}}">
                
                <controls:ServerLoadControl VerticalAlignment="Center"
                                            Value="{x:Bind ViewModel.Load}" />
                
                <TextBlock FontSize="{ThemeResource BodyFontSize}"
                           Foreground="{ThemeResource TextWeakColorBrush}"
                           Text="{x:Bind ViewModel.LoadPercent}" />
                
            </StackPanel>
        </Grid>
    </custom:GhostButton>
</UserControl>