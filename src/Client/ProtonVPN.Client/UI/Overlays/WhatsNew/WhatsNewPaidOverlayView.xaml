<ContentDialog x:Class="ProtonVPN.Client.UI.Overlays.WhatsNew.WhatsNewPaidOverlayView"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               x:DefaultBindMode="OneWay"
               CloseButtonCommand="{x:Bind ViewModel.CloseOverlayCommand}"
               Style="{StaticResource OverlayContentDialogStyle}"
               ScrollViewer.VerticalScrollBarVisibility="Disabled"
               Padding="0"
               mc:Ignorable="d">

    <ContentDialog.Resources>
        <!-- NaN = Auto -->
        <x:Double x:Key="ContentDialogWidth">NaN</x:Double>
        <x:Double x:Key="MaximumContentDialogWidth">620.0</x:Double>
        <Thickness x:Key="ContentDialogPadding">0</Thickness>
        <Thickness x:Key="ContentDialogContentMargin">0,-36,0,0</Thickness>
        <Visibility x:Key="ContentDialogCloseButtonVisibility">Collapsed</Visibility>
    </ContentDialog.Resources>

    <Grid RowSpacing="24"
          Margin="0,0,0,48">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image Grid.Row="0"
               HorizontalAlignment="Center"
               Margin="0,20,0,0"
               Source="{ThemeResource WelcomeFreeHeaderIllustrationSource}"
               Stretch="UniformToFill" />

        <ScrollViewer Grid.Row="1"
                      HorizontalAlignment="Center"
                      Margin="110,0,110,0">
                <StackPanel Spacing="8">

                    <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Text="{x:Bind ViewModel.Localizer.Get('Overlays_WhatsNewFree_Title')}"
                               TextWrapping="Wrap" />

                    <TextBlock Style="{StaticResource BodyTextBlockStyle}"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Text="{x:Bind ViewModel.Localizer.Get('Overlays_WhatsNewFree_Description')}"
                               TextWrapping="Wrap" />
                </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="2"
                Margin="124,0,124,0"
                Style="{StaticResource PrimaryButtonStyle}"
                HorizontalAlignment="Stretch"
                Command="{x:Bind ViewModel.CloseOverlayCommand, Mode=OneTime}"
                Content="{x:Bind ViewModel.Localizer.Get('Overlays_WhatsNew_TakeALook')}"
                AutomationProperties.AutomationId="TakeALookButton" />

    </Grid>
</ContentDialog>