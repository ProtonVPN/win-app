<wex:WindowEx x:Class="ProtonVPN.Client.UI.Upsell.Carousel.UpsellCarouselWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:local="using:ProtonVPN.Client.UI.Upsell.Carousel"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:wex="using:WinUIEx"
              Width="736"
              Height="539"
              MinWidth="736"
              MinHeight="539"
              Activated="OnActivated"
              IsMaximizable="False"
              IsResizable="False"
              PersistenceId="UpsellCarouselWindow"
              mc:Ignorable="d">

    <!--  There's a consistent difference between the size defined here and the actual size  -->
    <!--  Adds 16px to the width and 9px to the height to compensate  -->

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="BaseAlt" />
    </Window.SystemBackdrop>

    <custom:WindowContentControl x:Name="WindowContainer"
                                 Title="{Binding ViewModel.Title, ElementName=Shell}"
                                 IconSource="{ThemeResource VpnPlusIllustrationSource}"
                                 InnerBackground="{ThemeResource GradientUpsellBackgroundColorBrush}">

        <custom:WindowContentControl.Resources>
            <Style TargetType="ScrollViewer" BasedOn="{StaticResource OffsetScrollViewer}" />
        </custom:WindowContentControl.Resources>

        <local:UpsellCarouselShellPage x:Name="Shell"
                                       Margin="20,40,20,48" />

    </custom:WindowContentControl>
</wex:WindowEx>