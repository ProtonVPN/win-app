<UserControl x:Class="ProtonVPN.Client.UI.Update.UpdateBoxComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">

    <Border Padding="16,8"
            Margin="0,32,0,0"
            CornerRadius="8"
            Background="{ThemeResource BackgroundWeakColorBrush}"
            BorderBrush="{ThemeResource BorderWeakColorBrush}"
            Visibility="{x:Bind ViewModel.IsToShowUpdateComponent, Converter={StaticResource BooleanToVisibilityConverter}}">
        <Grid ColumnSpacing="16"
              ColumnDefinitions="*,Auto">
            <StackPanel Spacing="2"
                        Grid.Column="0">
                <TextBlock Text="{x:Bind ViewModel.Localizer.Get('Settings_About_GetLatestVersion')}"
                           Style="{ThemeResource BodyStrongTextBlockStyle}" />
                <TextBlock Text="{x:Bind ViewModel.Localizer.Get('Settings_About_Update_Description')}"
                           Style="{ThemeResource CaptionTextBlockStyle}" />
            </StackPanel>
            <Button Grid.Column="1"
                    VerticalAlignment="Center"
                    Command="{x:Bind ViewModel.UpdateCommand, Mode=OneTime}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Content="{x:Bind ViewModel.Localizer.Get('Common_Actions_Update')}" />
        </Grid>
    </Border>
</UserControl>