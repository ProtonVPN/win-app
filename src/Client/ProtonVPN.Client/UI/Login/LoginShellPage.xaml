<Page x:Class="ProtonVPN.Client.UI.Login.LoginShellPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:login="using:ProtonVPN.Client.UI.Login"
      Margin="-1,0,0,0"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      NavigationCacheMode="Required"
      mc:Ignorable="d">

    <Grid VerticalAlignment="Stretch"
          Background="{ThemeResource BackgroundNormColorBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Margin="32">
            <InfoBar Width="{StaticResource LoginPageContentWidth}"
                     Margin="0,32,0,0"
                     IsOpen="{x:Bind ViewModel.HasError, Mode=OneWay}"
                     Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                     Severity="Error" />

            <NavigationView HorizontalAlignment="Center"
                            BackRequested="OnBackRequested"
                            IsBackButtonVisible="{x:Bind ViewModel.IsBackEnabled, Converter={StaticResource BooleanToNavigationBackButtonVisibilityConverter}, Mode=OneWay}"
                            IsBackEnabled="{x:Bind ViewModel.IsBackEnabled, Mode=OneWay}"
                            IsPaneToggleButtonVisible="False"
                            IsSettingsVisible="false"
                            PaneDisplayMode="LeftMinimal">

                <Grid Margin="-32,-32,-33,-32"
                      RowSpacing="16">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" MinHeight="300" />
                    </Grid.RowDefinitions>

                    <Image HorizontalAlignment="Center"
                           Source="{ThemeResource WelcomeIllustrationSource}"
                           Stretch="UniformToFill"
                           Grid.Row="0" />

                    <Image HorizontalAlignment="Center"
                           Source="{ThemeResource ProductLogoIllustrationSource}"
                           Stretch="None"
                           Grid.Row="1" />

                    <Frame x:Name="NavigationFrame"
                           MaxWidth="{StaticResource LoginPageContentWidth}"
                           Margin="0,16,0,48"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Stretch"
                           Grid.Row="2" />
                </Grid>

            </NavigationView>

        </Grid>

        <login:DisableKillSwitchBannerComponent Grid.Row="1" />
    </Grid>
</Page>