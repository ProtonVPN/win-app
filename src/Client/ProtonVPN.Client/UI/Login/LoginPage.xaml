<Page x:Class="ProtonVPN.Client.UI.Login.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{StaticResource BackgroundNormColorBrush}"
          VerticalAlignment="Stretch">

        <InfoBar Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                 Width="{StaticResource LoginPageContentWidth}"
                 Canvas.ZIndex="1"
                 Severity="Error"
                 Margin="0,32,0,0"
                 BorderBrush="{StaticResource SignalDangerColorBrush}"
                 CornerRadius="8"
                 IsOpen="{x:Bind ViewModel.IsToShowError, Mode=TwoWay}"
                 IsIconVisible="True"
                 IsClosable="True">
        </InfoBar>

        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
            <NavigationView IsSettingsVisible="false"
                            BackRequested="OnBackRequested"
                            IsBackEnabled="{x:Bind ViewModel.IsBackEnabled, Mode=OneWay}"
                            HorizontalAlignment="Center"
                            PaneDisplayMode="LeftMinimal"
                            IsBackButtonVisible="{x:Bind ViewModel.IsBackEnabled, Converter={StaticResource BooleanToNavigationBackButtonVisibilityConverter}, Mode=OneWay}"
                            IsPaneToggleButtonVisible="False">
                <StackPanel>
                    <Image Source="{ThemeResource WelcomeIllustrationSource}" />
                    <Image Source="{ThemeResource ProductLogoIllustrationSource}"
                           Width="173" />
                    <Frame x:Name="LoginWindowContentFrame"
                           Background="{StaticResource BackgroundNormColorBrush}" />
                </StackPanel>
            </NavigationView>
        </StackPanel>
    </Grid>
</Page>