<Page x:Class="ProtonVPN.Client.UI.Login.Forms.LoginForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
      xmlns:pathIcons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
      x:DefaultBindMode="OneWay"
      mc:Ignorable="d">

    <StackPanel Margin="0,24,0,0"
                AutomationProperties.Name="{x:Bind ViewModel.Localizer.Get('Login_Form')}"
                Width="{StaticResource LoginPageContentWidth}">
        <TextBox Style="{StaticResource DefaultTextBoxStyle}"
                 AutomationProperties.AutomationId="UsernameTextBox"
                 IsSpellCheckEnabled="False"
                 IsTextPredictionEnabled="False"
                 Header="{x:Bind ViewModel.Localizer.Get('Login_Form_Username')}"
                 Text="{x:Bind ViewModel.Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 KeyDown="OnFormBoxKeyDown"
                 IsEnabled="{x:Bind ViewModel.IsLoginFormEnabled}" />

        <PasswordBox Header="{x:Bind ViewModel.Localizer.Get('Login_Form_Password')}"
                     Password="{x:Bind ViewModel.Password, Mode=TwoWay}"
                     AutomationProperties.AutomationId="PasswordBox"
                     Margin="0,18,0,0"
                     KeyDown="OnFormBoxKeyDown"
                     IsEnabled="{x:Bind ViewModel.IsLoginFormEnabled}" />

        <Button x:Name="LoginButton"
                AutomationProperties.Name="{x:Bind ViewModel.Localizer.Get('Login_Form_SignIn')}"
                Style="{StaticResource PrimaryButtonStyle}"
                HorizontalAlignment="Stretch"
                AutomationProperties.AutomationId="SignInButton"
                HorizontalContentAlignment="Stretch"
                Margin="0,24"
                Command="{x:Bind ViewModel.LoginCommand, Mode=OneTime}">
            <Grid HorizontalAlignment="Stretch">
                <TextBlock Text="{x:Bind ViewModel.Localizer.Get('Login_Form_SignIn')}"
                           HorizontalAlignment="Center" />
                <ProgressRing Foreground="{ThemeResource TextNormColorBrush}"
                              HorizontalAlignment="Right"
                              Width="16"
                              Height="16"
                              IsActive="{x:Bind ViewModel.IsLoggingIn}" />
            </Grid>
        </Button>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <HyperlinkButton Grid.Column="0"
                             Content="{x:Bind ViewModel.Localizer.Get('Login_Form_CreateAccount')}"
                             NavigateUri="{x:Bind ViewModel.CreateAccountUrl}"
                             ToolTipService.ToolTip="{x:Bind ViewModel.CreateAccountUrl}" />
            <custom:GhostButton Grid.Column="1"
                                HorizontalAlignment="Right"
                                Content="{x:Bind ViewModel.Localizer.Get('Login_Form_Help'), Mode=OneWay}"
                                AutomationProperties.AutomationId="HelpButton">
                <custom:GhostButton.Flyout>
                    <MenuFlyout AutomationProperties.AutomationId="HelpFlyoutMenu">
                        <MenuFlyoutItem Text="{x:Bind ViewModel.Localizer.Get('Login_Form_ResetPassword')}"
                                        Command="{x:Bind ViewModel.ResetPasswordCommand, Mode=OneTime}">
                            <MenuFlyoutItem.Icon>
                                <pathIcons:Key />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Text="{x:Bind ViewModel.Localizer.Get('Login_Form_ForgotUsername')}"
                                        Command="{x:Bind ViewModel.ForgotUsernameCommand, Mode=OneTime}">
                            <MenuFlyoutItem.Icon>
                                <pathIcons:User />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Text="{x:Bind ViewModel.Localizer.Get('Login_Form_TroubleSigningIn')}"
                                        Command="{x:Bind ViewModel.TroubleSigningInCommand, Mode=OneTime}">
                            <MenuFlyoutItem.Icon>
                                <pathIcons:ExclamationCircle />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Text="{x:Bind ViewModel.Localizer.Get('Login_Form_ReportAnIssue')}"
                                        Command="{x:Bind ViewModel.ReportAnIssueCommand}"
                                        AutomationProperties.AutomationId="ReportIssueMenuItem">
                            <MenuFlyoutItem.Icon>
                                <pathIcons:Bug />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </custom:GhostButton.Flyout>
                <custom:GhostButton.RightIcon>
                    <pathIcons:QuestionCircle />
                </custom:GhostButton.RightIcon>
            </custom:GhostButton>
        </Grid>
    </StackPanel>
</Page>