<UserControl x:Class="ProtonVPN.Client.UI.Login.DisableKillSwitchBannerComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
             mc:Ignorable="d">

    <Grid Height="52"
          Padding="24,0"
          Visibility="{x:Bind ViewModel.IsKillSwitchNotificationVisible, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
          Background="{ThemeResource BackgroundWeakColorBrush}">

        <Grid ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0"
                   VerticalAlignment="Center"
                   Source="{StaticResource KillSwitchAdvancedIllustrationSource}"
                   Width="24"
                   Height="24" />

            <TextBlock Grid.Column="1"
                       VerticalAlignment="Center"
                       Style="{ThemeResource BodyTextBlockStyle}"
                       Text="{x:Bind ViewModel.Localizer.Get('Login_Form_AdvancedKillSwitchDescription')}" />

            <custom:GhostButton Grid.Column="2"
                                Style="{ThemeResource PrimaryGhostButtonStyle}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Command="{x:Bind ViewModel.DisableKillSwitchCommand}"
                                Content="{x:Bind ViewModel.Localizer.Get('Login_Form_DisableKillSwitch')}" />

        </Grid>
    </Grid>
</UserControl>