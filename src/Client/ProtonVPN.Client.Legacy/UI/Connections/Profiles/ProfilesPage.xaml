<Page x:Class="ProtonVPN.Client.Legacy.UI.Connections.Profiles.ProfilesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:ProtonVPN.Client.Common.UI.Controls"
      xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:icons="using:ProtonVPN.Client.Common.UI.Assets.Icons"
      xmlns:items="using:ProtonVPN.Client.Legacy.UI.Connections.Common.Items"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:pathicons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
      xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
      x:DefaultBindMode="OneWay"
      NavigationCacheMode="Required"
      mc:Ignorable="d">

    <custom:PageContentControl x:Name="PageContentHost"
                               BackCommand="{x:Bind ViewModel.GoBackCommand, Mode=OneTime}"
                               IsBackButtonVisible="{x:Bind ViewModel.IsBackEnabled}"
                               IsCompact="{x:Bind ViewModel.IsNavigationPaneCollapsed}"
                               Style="{StaticResource MainPageContentControlStyle}">

        <custom:PageContentControl.PageHeader>

            <StackPanel Orientation="Vertical"
                        Spacing="20">

                <custom:PageHeaderContentControl Content="{x:Bind ViewModel.Description}"
                                                 Header="{x:Bind ViewModel.Title}"
                                                 IllustrationSource="{x:Bind ViewModel.IllustrationSource}" />

                <Grid ColumnSpacing="16"
                      Visibility="{x:Bind ViewModel.HasProfiles, Converter={StaticResource BooleanToVisibilityConverter}}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Foreground="{ThemeResource TextWeakColorBrush}"
                               Style="{StaticResource BodyTextBlockStyle}"
                               Text="{x:Bind ViewModel.Header}"
                               TextTrimming="CharacterEllipsis" />

                    <Button Grid.Row="1"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Command="{x:Bind ViewModel.CreateProfileCommand, Mode=OneTime}"
                            Content="{x:Bind ViewModel.Localizer.Get('Connections_Profiles_New')}" />

                </Grid>

            </StackPanel>

        </custom:PageContentControl.PageHeader>

        <Grid>

            <ItemsControl ItemsSource="{x:Bind ViewModel.Profiles, Mode=OneTime}"
                          Visibility="{x:Bind ViewModel.HasProfiles, Converter={StaticResource BooleanToVisibilityConverter}}">

                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="items:ProfileItem">

                        <custom:DualCommandsRow IsContentEnabled="{x:Bind IsEnabled}"
                                                PrimaryCommand="{x:Bind ToggleConnectionCommand, Mode=OneTime}"
                                                PrimaryCommandAutomationId="{x:Bind PrimaryCommandAutomationId}"
                                                PrimaryCommandToolTip="{x:Bind ToolTip}"
                                                SecondaryCommandAutomationId="{x:Bind SecondaryCommandAutomationId}">

                            <Grid VerticalAlignment="Center"
                                  ColumnSpacing="12">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <custom:ConnectionProfileIcon Grid.Row="0"
                                                              Grid.RowSpan="2"
                                                              Grid.Column="0"
                                                              VerticalAlignment="Top"
                                                              CountryCode="{x:Bind ExitCountryCode}"
                                                              FlagType="{x:Bind FlagType}"
                                                              IsFlagVisible="True"
                                                              ProfileCategory="{x:Bind Profile.Category}"
                                                              ProfileColor="{x:Bind Profile.Color}" />

                                <StackPanel Grid.Column="1"
                                            Orientation="Vertical"
                                            Spacing="4">

                                    <Grid HorizontalAlignment="Left"
                                          ColumnSpacing="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   AutomationProperties.AutomationId="ProfileTitleLabel"
                                                   Style="{StaticResource BodyLargeStrongTextBlockStyle}"
                                                   Text="{x:Bind Header}"
                                                   TextTrimming="CharacterEllipsis"
                                                   TextWrapping="NoWrap" />

                                        <pathicons:Wrench Grid.Column="1"
                                                          Margin="0,1,0,0"
                                                          VerticalAlignment="Center"
                                                          Visibility="{x:Bind IsUnderMaintenance, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                        <icons:ActiveDot Grid.Column="2"
                                                         Width="16"
                                                         Height="16"
                                                         Margin="0,1,0,0"
                                                         VerticalAlignment="Center"
                                                         AutomationProperties.AutomationId="{x:Bind ActiveConnectionAutomationId}"
                                                         Visibility="{x:Bind IsActiveConnection, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                    </Grid>

                                    <toolkit:WrapPanel HorizontalSpacing="6"
                                                       Orientation="Horizontal"
                                                       VerticalSpacing="4">

                                        <TextBlock AutomationProperties.AutomationId="ConnectionCardSubtitleLabel"
                                                   Foreground="{ThemeResource TextWeakColorBrush}"
                                                   Style="{StaticResource BodyTextBlockStyle}"
                                                   Text="{x:Bind SubHeader}"
                                                   TextTrimming="CharacterEllipsis"
                                                   TextWrapping="WrapWholeWords" />

                                        <TextBlock VerticalAlignment="Center"
                                                   Foreground="{ThemeResource TextWeakColorBrush}"
                                                   Style="{StaticResource BodyTextBlockStyle}"
                                                   Text="â€¢"
                                                   Visibility="{x:Bind HasFeature}" />

                                        <StackPanel Orientation="Horizontal"
                                                    Spacing="4"
                                                    Visibility="{x:Bind IsTor}">
                                            <pathicons:BrandTor Foreground="{ThemeResource TextWeakColorBrush}" />
                                            <TextBlock AutomationProperties.AutomationId="ConnectionCardFeatureTorLabel"
                                                       Foreground="{ThemeResource TextWeakColorBrush}"
                                                       Style="{StaticResource BodyTextBlockStyle}"
                                                       Text="{x:Bind Localizer.Get('Server_Feature_Tor')}"
                                                       TextTrimming="CharacterEllipsis"
                                                       TextWrapping="WrapWholeWords" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal"
                                                    Spacing="4"
                                                    Visibility="{x:Bind IsP2P}">
                                            <pathicons:ArrowRightArrowLeft Foreground="{ThemeResource TextWeakColorBrush}" />
                                            <TextBlock AutomationProperties.AutomationId="ConnectionCardFeatureP2PLabel"
                                                       Foreground="{ThemeResource TextWeakColorBrush}"
                                                       Style="{StaticResource BodyTextBlockStyle}"
                                                       Text="{x:Bind Localizer.Get('Server_Feature_P2P')}"
                                                       TextTrimming="CharacterEllipsis"
                                                       TextWrapping="WrapWholeWords" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal"
                                                    Spacing="4"
                                                    Visibility="{x:Bind IsSecureCore}">
                                            <pathicons:LockLayers Foreground="{ThemeResource TextWeakColorBrush}" />
                                            <TextBlock AutomationProperties.AutomationId="ConnectionCardFeatureSecureCoreLabel"
                                                       Foreground="{ThemeResource TextWeakColorBrush}"
                                                       Style="{StaticResource BodyTextBlockStyle}"
                                                       Text="{x:Bind Localizer.Get('Server_Feature_SecureCore')}"
                                                       TextTrimming="CharacterEllipsis"
                                                       TextWrapping="WrapWholeWords" />
                                        </StackPanel>
                                    </toolkit:WrapPanel>
                                </StackPanel>
                            </Grid>

                            <custom:DualCommandsRow.PrimaryCommandContent>
                                <Grid>
                                    <Image Height="20"
                                           HorizontalAlignment="Center"
                                           Source="{ThemeResource VpnPlusIllustrationSource}"
                                           Visibility="{x:Bind IsRestricted, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                    <TextBlock Text="{x:Bind PrimaryActionLabel}"
                                               Visibility="{x:Bind IsRestricted, Converter={StaticResource NotBooleanToVisibilityConverter}}" />

                                </Grid>
                            </custom:DualCommandsRow.PrimaryCommandContent>

                            <custom:DualCommandsRow.SecondaryCommandIcon>
                                <pathicons:ThreeDotsVertical />
                            </custom:DualCommandsRow.SecondaryCommandIcon>

                            <custom:DualCommandsRow.SecondaryCommandFlyout>
                                <MenuFlyout Closing="OnActionsMenuFlyoutClosing"
                                            Placement="BottomEdgeAlignedRight">
                                    <MenuFlyoutItem Command="{x:Bind EditProfileCommand}"
                                                    Text="{x:Bind Localizer.Get('Common_Actions_Edit')}">
                                        <MenuFlyoutItem.Icon>
                                            <pathicons:Pencil />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem Command="{x:Bind DeleteProfileCommand}"
                                                    Text="{x:Bind Localizer.Get('Common_Actions_Delete')}">
                                        <MenuFlyoutItem.Icon>
                                            <pathicons:TrashCrossFilled />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                </MenuFlyout>
                            </custom:DualCommandsRow.SecondaryCommandFlyout>

                        </custom:DualCommandsRow>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

            </ItemsControl>

            <StackPanel MaxWidth="300"
                        Margin="0,72,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Vertical"
                        Spacing="8"
                        Visibility="{x:Bind ViewModel.HasProfiles, Converter={StaticResource NotBooleanToVisibilityConverter}}">

                <Image Width="64"
                       Height="64"
                       Margin="0,0,0,12"
                       HorizontalAlignment="Center"
                       Source="{ThemeResource NewProfileIllustrationSource}" />

                <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}"
                           Text="{x:Bind ViewModel.Localizer.Get('Connections_Profiles_Empty_Title')}"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />

                <TextBlock Foreground="{ThemeResource TextWeakColorBrush}"
                           Style="{StaticResource CaptionTextBlockStyle}"
                           Text="{x:Bind ViewModel.Localizer.Get('Connections_Profiles_Empty_Description')}"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />

                <Button Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,24,0,0"
                        HorizontalAlignment="Center"
                        Command="{x:Bind ViewModel.CreateProfileCommand, Mode=OneTime}"
                        Content="{x:Bind ViewModel.Localizer.Get('Connections_Profiles_Create')}"
                        Style="{StaticResource PrimaryButtonStyle}" />

            </StackPanel>

        </Grid>

    </custom:PageContentControl>

</Page>