<Page x:Class="ProtonVPN.Client.Legacy.UI.Login.Forms.LoginForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:pathIcons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
      x:DefaultBindMode="OneWay"
      NavigationCacheMode="Required"
      mc:Ignorable="d">

    <Grid Width="{StaticResource LoginPageContentWidth}"
          Margin="0,24,0,0"
          AutomationProperties.Name="{x:Bind ViewModel.Localizer.Get('Login_Form')}">

        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">

            <TextBox AutomationProperties.AutomationId="UsernameTextBox"
                     Header="{x:Bind ViewModel.UsernameFieldLabel}"
                     IsEnabled="{x:Bind ViewModel.IsLoginFormEnabled}"
                     IsSpellCheckEnabled="False"
                     IsTextPredictionEnabled="False"
                     KeyDown="OnFormBoxKeyDown"
                     Style="{StaticResource DefaultTextBoxStyle}"
                     Text="{x:Bind ViewModel.Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     x:Name="UsernameTextBox"/>

            <PasswordBox Margin="0,16,0,0"
                         AutomationProperties.AutomationId="PasswordBox"
                         Header="{x:Bind ViewModel.Localizer.Get('Login_Form_Password')}"
                         IsEnabled="{x:Bind ViewModel.IsLoginFormEnabled}"
                         KeyDown="OnFormBoxKeyDown"
                         Password="{x:Bind ViewModel.Password, Mode=TwoWay}"
                         Visibility="{x:Bind ViewModel.IsPasswordFieldVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />

            <Button x:Name="LoginButton"
                    Margin="0,24,0,0"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    AutomationProperties.AutomationId="SignInButton"
                    AutomationProperties.Name="{x:Bind ViewModel.Localizer.Get('Login_Form_SignIn')}"
                    Command="{x:Bind ViewModel.LoginCommand, Mode=OneTime}"
                    Style="{StaticResource PrimaryButtonStyle}">
                <Grid HorizontalAlignment="Stretch">
                    <TextBlock HorizontalAlignment="Center"
                               Text="{x:Bind ViewModel.Localizer.Get('Login_Form_SignIn')}" />
                    <ProgressRing Width="16"
                                  Height="16"
                                  HorizontalAlignment="Right"
                                  IsActive="{x:Bind ViewModel.IsLoggingIn}" />
                </Grid>
            </Button>

        </StackPanel>

        <HyperlinkButton Grid.Row="1"
                         Margin="0,16,0,0"
                         HorizontalAlignment="Center"
                         AutomationProperties.AutomationId="SwitchSignInButton"
                         Command="{x:Bind ViewModel.SwitchLoginFormCommand, Mode=OneTime}"
                         Content="{x:Bind ViewModel.SwitchPageLabel}"
                         Style="{StaticResource NoIconHyperlinkButtonStyle}"
                         Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Mode=Self}}" />

        <Grid Grid.Row="2"
              Margin="0,16,0,0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <HyperlinkButton Grid.Column="0"
                             Content="{x:Bind ViewModel.Localizer.Get('Login_Form_CreateAccount')}"
                             NavigateUri="{x:Bind ViewModel.CreateAccountUrl}"
                             ToolTipService.ToolTip="{x:Bind ViewModel.CreateAccountUrl}" />

            <custom:GhostButton Grid.Column="1"
                                HorizontalAlignment="Right"
                                AutomationProperties.AutomationId="HelpButton"
                                Content="{x:Bind ViewModel.Localizer.Get('Login_Form_Help'), Mode=OneWay}">
                <custom:GhostButton.Flyout>
                    <MenuFlyout AutomationProperties.AutomationId="HelpFlyoutMenu"
                                ShouldConstrainToRootBounds="True">
                        <MenuFlyoutItem Command="{x:Bind ViewModel.ResetPasswordCommand, Mode=OneTime}"
                                        Text="{x:Bind ViewModel.Localizer.Get('Login_Form_ResetPassword')}">
                            <MenuFlyoutItem.Icon>
                                <pathIcons:Key />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Command="{x:Bind ViewModel.ForgotUsernameCommand, Mode=OneTime}"
                                        Text="{x:Bind ViewModel.Localizer.Get('Login_Form_ForgotUsername')}">
                            <MenuFlyoutItem.Icon>
                                <pathIcons:User />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Command="{x:Bind ViewModel.TroubleSigningInCommand, Mode=OneTime}"
                                        Text="{x:Bind ViewModel.Localizer.Get('Login_Form_TroubleSigningIn')}">
                            <MenuFlyoutItem.Icon>
                                <pathIcons:ExclamationCircle />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem AutomationProperties.AutomationId="ReportIssueMenuItem"
                                        Command="{x:Bind ViewModel.ReportAnIssueCommand}"
                                        Text="{x:Bind ViewModel.Localizer.Get('Login_Form_ReportAnIssue')}">
                            <MenuFlyoutItem.Icon>
                                <pathIcons:Bug />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </custom:GhostButton.Flyout>
                <custom:GhostButton.RightIcon>
                    <pathIcons:QuestionCircle />
                </custom:GhostButton.RightIcon>
            </custom:GhostButton>
        </Grid>
    </Grid>
</Page>