<ContentDialog x:Class="ProtonVPN.Client.Legacy.UI.Dialogs.Overlays.TorOverlayDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               Title="{x:Bind ViewModel.Localizer.Get('Dialogs_Tor_Title')}"
               x:DefaultBindMode="OneWay"
               CloseButtonCommand="{x:Bind ViewModel.CloseOverlayCommand}"
               Style="{StaticResource OverlayContentDialogStyle}"
               mc:Ignorable="d">

    <StackPanel Orientation="Vertical"
                Spacing="16">

        <TextBlock Style="{StaticResource BodyTextBlockStyle}"
                   Text="{x:Bind ViewModel.Localizer.Get('Dialogs_Tor_Description')}"
                   TextWrapping="Wrap" />

        <HyperlinkButton HorizontalAlignment="Center"
                         Content="{x:Bind ViewModel.Localizer.Get('Dialogs_Tor_LearnMore')}"
                         NavigateUri="{x:Bind ViewModel.LearnMoreUrl, Mode=OneTime}"
                         ToolTipService.ToolTip="{x:Bind ViewModel.LearnMoreUrl, Mode=OneTime}" 
                         AutomationProperties.AutomationId="LearnMoreHyperlinkButton"/>
    </StackPanel>
</ContentDialog>