<ContentDialog x:Class="ProtonVPN.Client.Legacy.UI.Dialogs.Overlays.TroubleshootingOverlayDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
               xmlns:pathIcons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
               xmlns:controls="using:CommunityToolkit.WinUI.Controls"
               Title="{x:Bind ViewModel.Localizer.Get('Dialogs_Troubleshooting_Title')}"
               x:DefaultBindMode="OneWay"
               CloseButtonCommand="{x:Bind ViewModel.CloseOverlayCommand}"
               Style="{StaticResource OverlayContentDialogStyle}"
               mc:Ignorable="d">

    <ContentDialog.Resources>
        <ResourceDictionary>

            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <StaticResource x:Key="SettingsCardBackground" ResourceKey="InteractionDefaultEmptyColorBrush" />
                    <StaticResource x:Key="SettingsCardBackgroundPointerOver" ResourceKey="InteractionDefaultHoverColorBrush" />
                    <StaticResource x:Key="SettingsCardBackgroundPressed" ResourceKey="InteractionDefaultActiveColorBrush" />
                    <StaticResource x:Key="SettingsCardBackgroundDisabled" ResourceKey="InteractionDefaultEmptyColorBrush" />
                </ResourceDictionary>

                <ResourceDictionary x:Key="Dark">
                    <StaticResource x:Key="SettingsCardBackground" ResourceKey="InteractionDefaultEmptyColorBrush" />
                    <StaticResource x:Key="SettingsCardBackgroundPointerOver" ResourceKey="InteractionDefaultHoverColorBrush" />
                    <StaticResource x:Key="SettingsCardBackgroundPressed" ResourceKey="InteractionDefaultActiveColorBrush" />
                    <StaticResource x:Key="SettingsCardBackgroundDisabled" ResourceKey="InteractionDefaultEmptyColorBrush" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <VerticalAlignment x:Key="SettingsCardHeaderIconVerticalAlignment">Top</VerticalAlignment>
            <VerticalAlignment x:Key="SettingsCardHeaderVerticalAlignment">Top</VerticalAlignment>
            <FontWeight x:Key="SettingsCardHeaderFontWeight">SemiBold</FontWeight>
            <Thickness x:Key="SettingsCardBorderThickness">0</Thickness>

            <Style x:Key="TroubleshootingCardStyle" BasedOn="{StaticResource DefaultSettingsCardStyle}" TargetType="controls:SettingsCard">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderBrush" Value="Transparent" />
                <Setter Property="BorderThickness" Value="0" />
            </Style>

        </ResourceDictionary>
    </ContentDialog.Resources>

    <StackPanel Spacing="24">
        <TextBlock Style="{StaticResource CaptionTextBlockStyle}"
                   HorizontalAlignment="Center"
                   Text="{x:Bind ViewModel.Localizer.Get('Dialogs_Troubleshooting_Description')}"
                   TextWrapping="Wrap" />

        <StackPanel Spacing="16">

            <controls:SettingsCard Header="{x:Bind ViewModel.Localizer.Get('Dialogs_Troubleshooting_CheckInternet')}"
                                   Description="{x:Bind ViewModel.Localizer.Get('Dialogs_Troubleshooting_CheckInternet_Description')}"
                                   Style="{StaticResource TroubleshootingCardStyle}">
                <controls:SettingsCard.HeaderIcon>
                    <pathIcons:Lightbulb Foreground="{ThemeResource SignalWarningColorBrush}" />
                </controls:SettingsCard.HeaderIcon>
                <controls:SettingsCard.ActionIcon>
                    <pathIcons:ArrowOutSquare />
                </controls:SettingsCard.ActionIcon>
            </controls:SettingsCard>

            <controls:SettingsCard Header="{x:Bind ViewModel.Localizer.Get('Dialogs_Troubleshooting_DifferentNetwork')}"
                                   Description="{x:Bind ViewModel.Localizer.Get('Dialogs_Troubleshooting_DifferentNetwork_Description')}"
                                   Style="{StaticResource TroubleshootingCardStyle}">
                <controls:SettingsCard.HeaderIcon>
                    <pathIcons:Lightbulb Foreground="{ThemeResource SignalWarningColorBrush}" />
                </controls:SettingsCard.HeaderIcon>
                <controls:SettingsCard.ActionIcon>
                    <pathIcons:ArrowOutSquare />
                </controls:SettingsCard.ActionIcon>
            </controls:SettingsCard>

            <controls:SettingsCard Header="{x:Bind ViewModel.Localizer.Get('Dialogs_Troubleshooting_Antivirus')}"
                                   Description="{x:Bind ViewModel.Localizer.Get('Dialogs_Troubleshooting_Antivirus_Description')}"
                                   Style="{StaticResource TroubleshootingCardStyle}">
                <controls:SettingsCard.HeaderIcon>
                    <pathIcons:Lightbulb Foreground="{ThemeResource SignalWarningColorBrush}" />
                </controls:SettingsCard.HeaderIcon>
                <controls:SettingsCard.ActionIcon>
                    <pathIcons:ArrowOutSquare />
                </controls:SettingsCard.ActionIcon>
            </controls:SettingsCard>

            <controls:SettingsCard Header="{x:Bind ViewModel.Localizer.Get('Dialogs_Troubleshooting_StatusPage')}"
                                   Description="{x:Bind ViewModel.Localizer.Get('Dialogs_Troubleshooting_StatusPage_Description')}"
                                   IsClickEnabled="True"
                                   IsActionIconVisible="True"
                                   Command="{x:Bind ViewModel.OpenStatusPageCommand, Mode=OneTime}"
                                   Style="{StaticResource TroubleshootingCardStyle}">
                <controls:SettingsCard.HeaderIcon>
                    <pathIcons:Lightbulb Foreground="{ThemeResource SignalWarningColorBrush}" />
                </controls:SettingsCard.HeaderIcon>
                <controls:SettingsCard.ActionIcon>
                    <pathIcons:ArrowOutSquare />
                </controls:SettingsCard.ActionIcon>
            </controls:SettingsCard>

        </StackPanel>

        <TextBlock Style="{StaticResource CaptionTextBlockStyle}"
                   HorizontalAlignment="Center"
                   Foreground="{ThemeResource TextWeakColorBrush}"
                   Text="{x:Bind ViewModel.Localizer.Get('Dialogs_Troubleshooting_DidNotWork')}"
                   TextWrapping="Wrap" />

        <Button HorizontalAlignment="Center"
                Style="{StaticResource PrimaryButtonStyle}"
                Content="{x:Bind ViewModel.Localizer.Get('Common_Actions_ContactUs')}"
                Command="{x:Bind ViewModel.ContactUsCommand}"
                AutomationProperties.AutomationId="ContactUsButton" />
    </StackPanel>
</ContentDialog>