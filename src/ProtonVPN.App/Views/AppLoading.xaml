<UserControl x:Class="ProtonVPN.Views.AppLoading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:control="clr-namespace:ProtonVPN.Views.Controls"
             mc:Ignorable="d"
             x:Name="LoadingBox"
             MinWidth="640"
             MinHeight="480">

    <Grid Width="{Binding ElementName=LoadingBox, Path=Width}"
          Height="{Binding ElementName=LoadingBox, Path=Height}">
        <control:LoadingText />
    </Grid>
</UserControl>
