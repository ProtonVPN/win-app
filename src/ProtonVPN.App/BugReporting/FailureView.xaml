<UserControl x:Class="ProtonVPN.BugReporting.FailureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:icons="clr-namespace:ProtonVPN.Views.Icons"
             xmlns:resources="clr-namespace:ProtonVPN.Resources"
             mc:Ignorable="d">
    <Grid Background="{StaticResource ModalContentColor}">
        <StackPanel VerticalAlignment="Center">
            <icons:Failure
                Width="64"
                Height="64"
                Foreground="White"
                HorizontalAlignment="Center"/>
            <Label Content="{resources:Loc BugReport_msg_SendingFailed}"
                   FontSize="16"
                   Margin="0,20,0,0"
                   HorizontalAlignment="Center"
                   Foreground="White"/>
            <TextBlock Text="{Binding ErrorMessage}"
                   FontSize="16"
                   Margin="0,10"
                   TextWrapping="Wrap"
                   MaxWidth="260"
                   TextAlignment="Center"
                   HorizontalAlignment="Center"
                   Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>
