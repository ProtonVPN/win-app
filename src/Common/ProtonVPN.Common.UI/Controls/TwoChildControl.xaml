<UserControl x:Class="ProtonVPN.Common.UI.Controls.TwoChildControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid x:Name="Container"
          ColumnSpacing="8"
          CornerRadius="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid x:Name="PrimaryContentContainer"
              Padding="12,8"
              CornerRadius="8"
              Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ContentPresenter x:Name="PrimaryContentPresenter"
                              HorizontalContentAlignment="Stretch"
                              Grid.Column="0" />
            <ContentPresenter x:Name="PrimaryHoverContentPresenter"
                              Visibility="Collapsed"
                              HorizontalContentAlignment="Stretch"
                              Grid.Column="1" />
        </Grid>

        <ContentPresenter x:Name="SecondaryContentPresenter"
                          Margin="0,0,8,0"
                          Grid.Column="1" />

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="CommonStates">
                <VisualState x:Name="Normal">
                    <VisualState.Setters>
                        <Setter Target="PrimaryHoverContentPresenter.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="PrimaryContentPointerOver">
                    <VisualState.Setters>
                        <Setter Target="PrimaryHoverContentPresenter.Visibility" Value="Visible" />
                        <Setter Target="PrimaryContentContainer.Background" Value="{StaticResource InteractionDefaultHoverColorBrush}" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="SecondaryContentPointerOver">
                    <VisualState.Setters>
                        <Setter Target="Container.Background" Value="{StaticResource InteractionDefaultHoverColorBrush}" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</UserControl>