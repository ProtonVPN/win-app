<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Colors  -->

    <!--  Primary  -->
    <Color x:Key="PrimaryColor">#6D4AFF</Color>
    <!--  Link  -->
    <Color x:Key="LinkNormColor">#6D4AFF</Color>
    <Color x:Key="LinkHoverColor">#6243E6</Color>
    <Color x:Key="LinkActiveColor">#573BCC</Color>
    <!--  InteractionNorm  -->
    <Color x:Key="InteractionNormColor">#6D4AFF</Color>
    <Color x:Key="InteractionNormHoverColor">#6243E6</Color>
    <Color x:Key="InteractionNormActiveColor">#573BCC</Color>
    <!--  InteractionWeak  -->
    <Color x:Key="InteractionWeakColor">#EAE7E4</Color>
    <Color x:Key="InteractionWeakHoverColor">#DEDBD9</Color>
    <Color x:Key="InteractionWeakActiveColor">#D3D0CD</Color>
    <!--  InteractionDefault  -->
    <Color x:Key="InteractionDefaultColor">#00C2C0BE</Color>
    <Color x:Key="InteractionDefaultHoverColor">#33C2C0BE</Color>
    <Color x:Key="InteractionDefaultActiveColor">#59C2C0BE</Color>
    <!--  Text  -->
    <Color x:Key="TextNormColor">#0C0C14</Color>
    <Color x:Key="TextWeakColor">#706D6B</Color>
    <Color x:Key="TextHintColor">#8F8D8A</Color>
    <Color x:Key="TextDisabledColor">#C2BFBC</Color>
    <Color x:Key="TextInvertColor">#FFFFFF</Color>
    <!--  Background  -->
    <Color x:Key="BackgroundNormColor">#FFFFFF</Color>
    <Color x:Key="BackgroundWeakColor">#F5F4F2</Color>
    <Color x:Key="BackgroundStrongColor">#E5E4E1</Color>
    <Color x:Key="BackgroundInvertColor">#0C0C14</Color>
    <!--  Border  -->
    <Color x:Key="BorderNormColor">#D1CFCD</Color>
    <Color x:Key="BorderWeakColor">#EAE7E4</Color>
    <Color x:Key="BorderFocusColor">#6D4AFF</Color>
    <Color x:Key="BorderFocusRingColor">#336D4AFF</Color>
    <!--  Signal  -->
    <Color x:Key="SignalDangerColor">#DC3251</Color>
    <Color x:Key="SignalWarningColor">#FF9900</Color>
    <Color x:Key="SignalSuccessColor">#1EA885</Color>
    <!--  Backdrop  -->
    <Color x:Key="BackdropNormColor">#510C0C14</Color>
    <!--  VPN  -->
    <Color x:Key="VpnGreenColor">#1C9C7C</Color>
    <!--  Gradient  -->
    <Color x:Key="GradientFadingStartColor">#FFFFFFFF</Color>
    <Color x:Key="GradientFadingEndColor">#00FFFFFF</Color>
    <Color x:Key="GradientUnprotectedStartColor">#1EDC3251</Color>
    <Color x:Key="GradientUnprotectedEndColor">#00DC3251</Color>
    <Color x:Key="GradientConnectingStartColor">#1EFFFFFF</Color>
    <Color x:Key="GradientConnectingEndColor">#00FFFFFF</Color>
    <Color x:Key="GradientProtectedStartColor">#1E1C9C7C</Color>
    <Color x:Key="GradientProtectedEndColor">#001C9C7C</Color>
    <Color x:Key="GradientConnectionLineStartColor">#6D4AFF</Color>
    <Color x:Key="GradientConnectionLineEndColor">#1C9C7C</Color>

    <!--  Composite Colors  -->

    <!--  BackgroundWeakColor + InteractionDefaultHoverColor  -->
    <Color x:Key="BackgroundWeakHoverColor">#EBE9E8</Color>
    <!--  BackgroundWeakColor + InteractionDefaultActiveColor  -->
    <Color x:Key="BackgroundWeakActiveColor">#E3E2E0</Color>

</ResourceDictionary>
