<UserControl x:Class="ProtonVPN.Gui.UI.Home.Recents.RecentsComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:icons="using:ProtonVPN.Common.UI.Assets.Icons"
             xmlns:controls="using:ProtonVPN.Common.UI.Controls"
             xmlns:recents="using:ProtonVPN.Gui.UI.Home.Recents"
             mc:Ignorable="d">

    <UserControl.Resources>

    </UserControl.Resources>

    <StackPanel MaxWidth="600"
                Padding="16">
        <ItemsControl ItemsSource="{x:Bind ViewModel.RecentConnections, Mode=OneWay}">
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="recents:RecentItemViewModel">
                    <controls:TwoChildControl>
                        <controls:TwoChildControl.PrimaryContent>
                            <StackPanel>
                                <Grid ColumnSpacing="8" HorizontalAlignment="Left">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid>
                                        <icons:Pin Height="16"
                                                   HorizontalAlignment="Center"
                                                   Foreground="{StaticResource TextHintColorBrush}"
                                                   Grid.Column="0"
                                                   Visibility="{x:Bind IsPinned}" />
                                        <icons:ClockRotateLeft Height="16"
                                                               HorizontalAlignment="Center"
                                                               Foreground="{StaticResource TextHintColorBrush}"
                                                               Grid.Column="0"
                                                               Visibility="{x:Bind IsPinned, Converter={StaticResource NotBoolToVisibilityConverter}}" />
                                    </Grid>

                                    <controls:CountryFlagControl ExitCountryCode="{x:Bind ExitCountry}"
                                                                 EntryCountryCode="{x:Bind EntryCountry}"
                                                                 IsSecureCore="{x:Bind IsSecureCore}"
                                                                 IsCompact="{x:Bind IsSecureCore}"
                                                                 Height="16"
                                                                 Grid.Column="1" />
                                    <StackPanel Grid.Column="2"
                                                Orientation="Horizontal">
                                        
                                        <TextBlock Margin="0,0,4,0"
                                                   Text="{x:Bind Title}"
                                                   Style="{StaticResource BodyTextBlockStyle}"/>
                                        
                                        <TextBlock Margin="0,0,4,0"
                                                   Style="{StaticResource BodyTextBlockStyle}"
                                                   Visibility="{x:Bind HasSubtitle}"
                                                 Foreground="{StaticResource TextWeakColorBrush}" >
                                            <Run Text="-"/>
                                            <Run Text="{x:Bind Subtitle, Mode=OneWay}"/>
                                        </TextBlock>

                                        <icons:ActiveDot Height="16"
                                                         Width="16"
                                                         Visibility="{x:Bind IsActiveConnection, Mode=OneWay}" />
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </controls:TwoChildControl.PrimaryContent>

                        <controls:TwoChildControl.PrimaryHoverContent>
                            <TextBlock FontWeight="{StaticResource BodyStrongFontWeight}"
                                       x:Uid="Recents_Connect" />
                        </controls:TwoChildControl.PrimaryHoverContent>

                        <controls:TwoChildControl.SecondaryContent>
                            <Grid Background="Transparent">
                                <icons:ThreeDotsVertical Height="16"
                                                         Foreground="{StaticResource TextWeakColorBrush}" />
                            </Grid>
                        </controls:TwoChildControl.SecondaryContent>
                    </controls:TwoChildControl>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>