<Page
    x:Class="ProtonVPN.Gui.Views.Pages.Settings.AdvancedSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:labs="using:CommunityToolkit.Labs.WinUI"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  Margin="0,0,-24,24"
                  Padding="0,0,24,0">

        <StackPanel x:Name="ContentArea">

            <labs:SettingsCard x:Uid="Settings_VpnLogs"
                               Command="{x:Bind ViewModel.NavigateToCommand}"
                               CommandParameter="ProtonVPN.Gui.ViewModels.Pages.Settings.Advanced.VpnLogsViewModel"
                               IsClickEnabled="True"/>

            <labs:SettingsCard x:Uid="Settings_CustomDnsServers"
                               Command="{x:Bind ViewModel.NavigateToCommand}"
                               CommandParameter="ProtonVPN.Gui.ViewModels.Pages.Settings.Advanced.CustomDnsServersViewModel"
                               IsClickEnabled="True"/>


        </StackPanel>
    </ScrollViewer>
</Page>
